<script>
	const mobileOpen = document.querySelector('#mobileOpen');
	const mobileClose = document.querySelector('#mobileClose');
	const petefishMenu = document.querySelector('#petefishMenu');

	mobileOpen.addEventListener('click', (e) => {
		e.preventDefault();
		petefishMenu.classList.toggle('open-mobile-menu');
		mobileOpen.classList.toggle('hide-menu-trigger');
		mobileClose.classList.toggle('hide-menu-trigger');
	});

	mobileClose.addEventListener('click', (e) => {
		e.preventDefault();
		petefishMenu.classList.toggle('open-mobile-menu');
		mobileOpen.classList.toggle('hide-menu-trigger');
		mobileClose.classList.toggle('hide-menu-trigger');
	});

</script>

