    <script type="text/javascript">
        var formId = '';

        _beforeSubmit = function (event) {
            formId = event.target.id;

            $('#FieldError_Panel').html(null);

            var isValid = true
                first_name = document.getElementById('First_Name'),
                last_name  = document.getElementById('Last_Name'),
                email      = document.getElementById('Email'),
                phone      = document.getElementById('Phone'),
                file       = document.getElementById('FileUpload1');

            if (! first_name.checkValidity()) {
                isValid = false;

                $('#FieldError_Panel').append('<p class="errors"><strong>You entered an invalid first name.</strong></p>');
            }

            if (! last_name.checkValidity()) {
                isValid = false;

                $('#FieldError_Panel').append('<p class="errors"><strong>You entered an invalid last name.</strong></p>');
            }

            if (! email.checkValidity()) {
                isValid = false;

                $('#FieldError_Panel').append('<p class="errors"><strong>You entered an invalid email address.</strong></p>');
            }

            if (! phone.checkValidity()) {
                isValid = false;

                $('#FieldError_Panel').append('<p class="errors"><strong>You entered an invalid phone number.</strong></p>');
            }

            if (! FileUpload1.checkValidity()) {
                isValid = false;

                $('#FieldError_Panel').append('<p class="errors"><strong>You must upload a file.</strong></p>');
            }

            return isValid;
        };

        _submitEvent = function () {
            $('#' + formId).submit();
        };
    </script>

