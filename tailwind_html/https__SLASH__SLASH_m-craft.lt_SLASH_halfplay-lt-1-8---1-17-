<script>
function calculateDaysForEur() {
  let eur = document.getElementById("eurForDays").value;
  if (eur < 3) {
    eur = 3;
    document.getElementById("eurForDays").value = 3;
  }
  eur = Math.floor(eur)
  document.getElementById("eurForDays").value = eur;
  
  document.getElementById('daysFor').innerHTML = (eur * 10) + " + " + (Math.floor(((eur * 10)/30)) * 5) + " d.";
}
function calculateForPoints() {
  let eur = document.getElementById("eurForPoints").value;
  if (eur < 3) {
    eur = 3;
    document.getElementById("eurForPoints").value = 3;
  }
  eur = Math.floor(eur)
  document.getElementById("eurForPoints").value = eur;
  
  document.getElementById('pointsFor').innerHTML = eur * 80;
}
</script>
