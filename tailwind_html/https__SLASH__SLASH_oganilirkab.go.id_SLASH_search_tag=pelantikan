    <script>
        function showTime() {
            var date = new Date(),
                utc = new Date(Date(
                    date.getFullYear(),
                    date.getMonth(),
                    date.getDate(),
                    date.getHours(),
                    date.getMinutes(),
                    date.getSeconds()
                ));

            document.getElementById('timeAngga').innerHTML = utc.toLocaleTimeString();
        }

        setInterval(showTime, 500);

        $(window).on('load', function() {

            $('#js-preloader').fadeOut('slow');

        });
    </script>

