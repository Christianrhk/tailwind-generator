    var hashTag = [];
    $(document).ready(function () {
        $("input[data-type='currency']").on({
            keyup: function () {
                formatCurrency($(this));
            },
            blur: function () {
                formatCurrency($(this), "blur");
            },
            change: function () {
                formatCurrency($(this), "blur");
            }

        });

        $.ajax({
            url: "https://hegka.com/hash-tag",
            type: "POST",
            data: {
                "_token": "UH96RJ8O42d8mj5aUHCtatDyRTU1gUSP09zKfdaK",
            },
            success: function (dataResult) {
                hashTag = dataResult.hashTags;
            }
        });

    });

