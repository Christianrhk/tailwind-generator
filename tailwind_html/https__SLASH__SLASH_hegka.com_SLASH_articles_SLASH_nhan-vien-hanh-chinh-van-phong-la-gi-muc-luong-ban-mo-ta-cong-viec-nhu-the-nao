            $('#form-update-job input.salary_max').val(formatNumber(salary_max.toString()));
            $('#form-update-job .form-select.type').val(type).trigger('change');
            $('#form-update-job .form-select.experience').val(experience).trigger('change');
            $('#form-update-job .form-select.workplace').val(workplace).trigger('change');
            $('#form-update-job .form-select.group-id').val(group_id).trigger('change');
            $('#form-update-job select.district').select2({
                data: districts,
                allowClear: true
            });
            $('#form-update-job select.location').select2({
                data:locations,
                allowClear: true
            });
            $('#form-update-job .form-select.location').val(location).trigger('change');
            $('#form-update-job .form-select.district').val(district_id).trigger('change');
            $('#form-update-job .job-image-preview .job-image').attr('src', image);
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            

            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
