    $(document).on('click', '#nav-tabContent .fa-eye', function () {
        if ('password' == $(this).parent().find('input').attr('type')) {
            $(this).parent().find('input').prop('type', 'text');
        } else {
            $(this).parent().find('input').prop('type', 'password');
