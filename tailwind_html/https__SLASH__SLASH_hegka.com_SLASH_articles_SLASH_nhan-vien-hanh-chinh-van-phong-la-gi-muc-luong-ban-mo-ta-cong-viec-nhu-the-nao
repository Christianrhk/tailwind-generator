<script>

    $('#postImage .form-select').on('select2:select', function (e) {
        Livewire.emitTo('user.articles.create-article', 'setGroup', $(this).val())
    });
    $(document).on("hidden.bs.modal", '#postImage', function () {
        $('#postImage .form-select').val(null).trigger('change');
        Livewire.emitTo('user.articles.create-article', 'cancel')
    });
    $('#editArticle .form-select').on('select2:select', function (e) {
        Livewire.emitTo('user.articles.edit-article', 'setGroup', $(this).val())
    });
    $(document).on("hidden.bs.modal", '#postImage', function () {
        $('#editArticle .form-select').val(null).trigger('change');
        Livewire.emitTo('user.articles.edit-article', 'cancel')
    });

    $('#article-embed .form-select').on('select2:select', function (e) {
        Livewire.emitTo('user.articles.edit', 'setUnit', $(this).val())
    });

    $(document).on('click', '#article-embed .copy', function () {
        var textBox = document.getElementById("link-iframe");
        textBox.select();
        document.execCommand("copy");
    })
    $(document).on('click', '#share-post #button-copy', function () {
        var textBox = document.getElementById("input-copy");
        textBox.select();
        document.execCommand("copy");
    })

    $(document).on('click', '#article-embed .btn-show-option', function () {
       $(this).addClass('d-none');
       $('#article-embed .embed-option').removeClass('d-none');
    })

    $(document).on('click', '.menu-link.copy-link', function () {
        var temp = $('<input id="copy-link">');
        $("body").append(temp);
        temp.val($(this).data('url')).select();
        document.execCommand("copy");
        let time = 3000

        $.notify({
            // options
            message: 'Đã sao chép!',
        }, {
            // settings
            element: 'body',
            position: null,
            allow_dismiss: true,
            newest_on_top: false,
            showProgressbar: false,
            placement: {
                from: "top",
                align: "right"
            },
            offset: 20,
            spacing: 10,
            z_index: 1031,
            type: event.detail.type,
            timer: time,
            delay: time,
            animate: {
                enter: 'animated fadeInDown',
                exit: 'animated fadeOutUp'
            },
            icon_type: 'class',
        });
        temp.remove()
    })

    $(document).on("hidden.bs.modal", '#article-embed', function () {
        $('#article-embed .btn-show-option').removeClass('d-none');
        $('#article-embed .embed-option').addClass('d-none');
    });

</script>

<script type="text/javascript">

    $(document).ready(function () {
        window.livewire.on('modalArticleUpdate', (e) => {
            var groupId = e.groupId;
            var tags = e.tags;
            var image = e.image;

            editorArticleEdit.setData(e.content);
            $('#editArticle .form-select').val(groupId).trigger('change');
            $('#editArticle .tags .select-tags').select2({
                data:tags,
                tags: true,
                ajax: {
                    url: 'https://hegka.com/hash-tags/search',
                    data: function (params) {
                        var query = {
                            search: params.term,
                            type: 'public'
                        }

                        // Query parameters will be ?search=[term]&type=public
                        return query;
                    },
                    processResults: function (data) {
                        return {
                            results: $.map(data, function (item) {
                                return {
                                    text: item.name,
                                    id: item.id
                                }
                            })
                        };
                    },
                    cache: true
                },
                allowClear: true
            });
            $('#editDraftArticle .tags .select-tags').select2({
                data:tags,
                allowClear: true,
                tags: true,
                ajax: {
                    url: 'https://hegka.com/hash-tags/search',
                    data: function (params) {
                        var query = {
                            search: params.term,
                            type: 'public'
                        }

                        // Query parameters will be ?search=[term]&type=public
                        return query;
                    },
                    processResults: function (data) {
                        return {
                            results: $.map(data, function (item) {
                                return {
                                    text: item.name,
                                    id: item.id
                                }
                            })
                        };
                    },
                    cache: true
                },
            });

            $('#editArticle .image-input-wrapper-preview')
                .css('background-image', 'url(' + image + ')')
                .css('background-size', 'contain')
                .css('background-position', 'center')
            if ( image != null && image.length > 0) {
                $('#editArticle .image-edit-article-change').addClass('d-none')
                $('#editArticle .image-edit-article-delete').removeClass('d-none')
            }
        })
