    function resetCommentReply(action, comment) {
        $('#imageReplyUpload-' + action + '-' + comment).val('')
        $('.reply-container[data-action="' + action + '"]').addClass('display-none').html('');
        $('.reply-action[data-action="' + action + '"]').html('<span class="comment-like text-gray-700" data-action="' + action + '" data-comment="' + comment + '"><i class="fas fa-arrow-up text-700 "></i><span class="text-gray-700 text-700 ">  0  </span><i class="fas fa-arrow-down text-700"></i></span> <span class="reply-comment text-gray-700 text-700 ml-2" data-action="' + action + '" data-comment="' + comment + '">Trả lời</span>');

    }

    $(window).scroll(function() {
        var height = $(window).scrollTop();
        var heightScreen = $(window).height();
        var topBanner = heightScreen - height
        if(topBanner <= 135 ){
            topBanner = 135
        }
        var heightScroll = $(window).scrollTop();
        if(heightScroll >= 350 ){
            heightScroll = 350
        }
        heightScroll = heightScroll *3;
        $('.banner-right').css('top', topBanner);
        $('.banner-left').css('top', topBanner);
        $('.banner-scroll').css('background-position-y',-heightScroll);
        if(height > 50) {
            $('#my-progress').addClass('progress-fixed');
            $('#my-progress-footer').addClass('progress-fixed-footer');
        } else {
            $('#my-progress').removeClass('progress-fixed');
            $('#my-progress-footer').removeClass('progress-fixed-footer');
        }

        var footerHeight = $('.detail-content').innerHeight();

        var elem = document.getElementById("my-bar");
        var elemFooter = document.getElementById("my-bar-footer");

        var width = (height / footerHeight) * 100;
        elem.style.width = width + "%";
        elemFooter.style.width = width + "%";
    });
</script>
<script>
    $(document).ready(function () {
        $(document).on('click','.container-banner #rightbar,.container-banner #leftbar,.container-banner .event-notification-box,.container-banner #leftbar,.container-banner .toolbar,.container-banner .modal', function (e) {
            e.stopPropagation();
        })
        window.onscroll = function (ev) {
            if($(window).width() <= 992) {
                var top = $('.ads-show').offset().top - $(window).height() + 50;
                var bottom = $('.ads-show').offset().top + $(window).height();
                let heightScroll = window.scrollY;
                if (heightScroll >= top && heightScroll <= bottom) {
                    $('.ads-container').addClass('position-fixed').removeClass('d-none')
                } else {
                    $('.ads-container').removeClass('position-fixed').addClass('d-none')
                }
            }

            if(heightScroll >= 230) {
                $('.container-banner').addClass('banner-scroll').addClass('background-size-cover')
            } else {
                $('.container-banner').removeClass('banner-scroll').removeClass('background-size-cover')
            }
            if ((window.innerHeight + window.scrollY) >= ($('.main-body').height() - 300)) {
                Livewire.emitTo('user.articles.detail', 'loadMore')
                
                
                
            }
        };
    })
</script>
                            <script src="https://hegka.com/home/js/ads-detail-mobile.js"></script>
                <script>
                    var background = '/storage/article_groups/7EPXmvIFyjbt3XYvBDr1JVPd5EEddXe1UZWcd2gb.gif';
                    $('.article-content .content-left .ar-content').addClass('mobile');
                    var childrenLength = parseInt($('.article-content .content-left .ar-content p').length / 2);

                    if ($('.article-content .content-left .ar-content').has('.ads-show').length <= 0) {
                        $('.article-content .content-left .ar-content p:eq(' + childrenLength + ')').after('<div class="ads-show"></div><a class="ads-container"' +
                            ' rel="sponsored" href="' + linkBackground +'" target="' + targetBackground +'">' +
                            '<img src="' + background + '">' +
                            '</a><div class="ads-container-scroll"><div class="scroll-content text-uppercase">' + adsTitle + '</div></div>\n')
                    }
                </script>
                            <script>
        $(document).ready(function () {
            window.livewire.on('ConfirmCloseModal', (e) => {
                $('#' + e.id).modal('hide');
            })
        })
    </script>

<script>
    // click to Question button and Back to Top For New Right bar
    const questionBtns = document.querySelectorAll('.right-control .item')
    const questionBtn = document.querySelectorAll('.right-control .item')[2];
    let newBackToTop = document.querySelectorAll('.right-control .item')[0];
    if(questionBtns.length) {
        newBackToTop.onclick = () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth',
            })
        }
        if(questionBtn) {
            questionBtn.onclick = (e) => {
                e.stopPropagation();
                const img = questionBtn.querySelectorAll('img');
                img[0].style.opacity = '0';
                img[1].style.opacity = '1';
                const tagBox = document.querySelector('.right-control .tags-box');
                if (!tagBox.classList.contains('active')) {
                    tagBox.classList.add('active');
                    img[0].style.opacity = '0';
                    img[1].style.opacity = '1';
                } else {
                    tagBox.classList.remove('active');
                    img[0].style.opacity = '1';
                    img[1].style.opacity = '0';
                }
            }

            // make a hover after clicking question button
            questionBtn.addEventListener('mouseover', () => {
                const img = questionBtn.querySelectorAll('img');
                img[0].style.opacity = '0';
                img[1].style.opacity = '1';
            })
            questionBtn.addEventListener('mouseout', () => {
                const tagBox = document.querySelector('.right-control .tags-box');
                const img = questionBtn.querySelectorAll('img');
                if (!tagBox.classList.contains('active')) {
                    img[0].style.opacity = '1';
                    img[1].style.opacity = '0';
                } else {
                    img[0].style.opacity = '0';
                    img[1].style.opacity = '1';
                }
            })
        }
        // Turn off Tags Box When clicking to the child of TagsBox
        const tagsInBox = document.querySelectorAll('.copyright a');
        tagsInBox.forEach(ele => {
            ele.onclick = () => {
                const itemLength = document.querySelectorAll('.right-control .item').length;
                const tagBox = document.querySelector('.right-control .tags-box');
                tagBox.classList.remove('active');
                const img = document.querySelectorAll('.right-control .item')[itemLength-1].querySelectorAll('img');
                img[0].style.opacity = '1';
                img[1].style.opacity = '0';
            }
        })

        // StopPropagation when clicking the button inside the tagsInBox
        const tagsBox = document.querySelector('.tags-box .copyright');
        const tagsInBoxBtn = document.querySelector('.copyright .btn-group .create-company');
        tagsBox.onclick = (e) => {
            e.stopPropagation();
        }
        tagsInBoxBtn.onclick = () => {
            const itemLength = document.querySelectorAll('.right-control .item').length;
            const tagBox = document.querySelector('.right-control .tags-box');
            tagBox.classList.remove('active');
            const img = document.querySelectorAll('.right-control .item')[itemLength-1].querySelectorAll('img');
            img[0].style.opacity = '1';
            img[1].style.opacity = '0';
        }
        // turn off Tags Box when clicking to the body
        document.body.onclick = () => {
            const itemLength = document.querySelectorAll('.right-control .item').length;
            const tagBox = document.querySelector('.right-control .tags-box');
            tagBox.classList.remove('active');
            const img = document.querySelectorAll('.right-control .item')[itemLength-1].querySelectorAll('img');
            img[0].style.opacity = '1';
            img[1].style.opacity = '0';
        }
    }
    $(document).on('click', '.dropdown .delete-deal', function (e) {
        $(this).parents('article').remove();
        $(this).parents('.swiper .swiper-slide').remove();
    })
    $(document).on('click', '.copy-button', function (e) {
        e.stopPropagation();
        e.preventDefault();
        var $input = $(this).parent().find('.copy-input');
        $input.select();
        document.execCommand("copy");
    })
    const isHover = (e) => e.parentElement.querySelector(":hover") === e;
    function showLikeBtn() {
        $(document).on('mouseenter','.newly-post', function () {
            $(this).find('.reaction-article-btn').removeClass('hidden');
        })
        $(document).on('mouseleave','.newly-post', function () {
            let $this = $(this);
            setTimeout(function () {
                $this.find('.reaction-article-btn').addClass('hidden');
            }, 1000)
        })
    }
    showLikeBtn()
</script>
</body>
</html>
