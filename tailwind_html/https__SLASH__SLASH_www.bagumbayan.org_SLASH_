                $('#toggle-menu').click(function(){
                    if(!expanded) {
                        $('#menu-main-menu').removeClass('hidden');
                        $('#menu-main-menu').addClass('block');
                        expanded = true;
                    }
                    else {
                        expanded = false;
                        $('#menu-main-menu').removeClass('block');
                        $('#menu-main-menu').addClass('hidden');
                    }
                });
            });
        </script>
