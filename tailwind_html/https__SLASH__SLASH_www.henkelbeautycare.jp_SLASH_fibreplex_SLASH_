<script>
    function menuOpen(){
        $('#sp-menu').css('transform', 'translateX(0)')
    }
    function menuClose(){
        $('#sp-menu').css('transform', 'translateX(120%)')
    }
    function bannerClose(){
        $('#banner').hide()
    }
    $(function(){
        $('#clearly,#stylish,#natural').on('click', function() {
            var id = $(this).attr('id')
            $('#overlay').fadeIn(500)
            $('#modal-'+id).fadeIn(500)
            $('.'+id+'-slider').slick({
                slidesToShow: 1,
                slidesToScroll: 1,
                arrows: true,
                fade: true,
                prevArrow: '<div class="slide-arrow prev-arrow text-white h-full flex items-center absolute top-0 pr-4" style="left: -25px"><span>◀︎</span></div>',
                nextArrow: '<div class="slide-arrow next-arrow text-white h-full flex items-center absolute top-0 pl-4" style="right: -25px"><span>▶︎</span></div>'
            })
            $('.'+id+'-slider-catch').slick({
                slidesToShow: 4,
                slidesToScroll: 1,
                asNavFor: '.'+id+'-slider',
                dots: false,
                arrows: false,
                focusOnSelect: true
            })
        });
        $('.close-button').on('click', function(){
            $(this).parents('.modal').fadeOut(500)
            $('#overlay').fadeOut(500)
        })
        $('.case-modal-close').on('click', function(){
            $(this).parents('.modal-case').fadeOut(500);
        })
        $('#detail1').on('inview', function(event, isInView) {
            var targetBottom = $('#detail1').offset().top + $('#detail1').innerHeight()
            var scrollY = window.scrollY
            if (isInView || targetBottom < scrollY ) { 
                $('#banner').fadeIn(500)
            } else {
                $('#banner').fadeOut(500)
            }
        })
        $(window).on('load', function(){
            $('.bg').addClass('is-animated')
            $('.fv-main-text-sp, .fv-main-text, .fv_image, .fv-text-2-sp, .fv-text-1, .fv-icon, .fv-text-2, .fv-columns').each(function(){
                $(this).addClass('fv-animation')
            })
        })
        $('header a[href^="#"]').on('click', function(){
            // 移動先を50px上にずらす
            var adjust = 70
            // スクロールの速度
            var speed = 400 // ミリ秒
            // アンカーの値取得
            var href= $(this).attr("href")
            // 移動先を取得
            var target = $(href == "#" || href == "" ? 'html' : href)
            // 移動先を調整
            var position = target.offset().top - adjust
            // スムーススクロール
            $('body,html').animate({scrollTop:position}, speed, 'swing')
            return false
        })
        $('#detail1,#detail2,#detail3 > div,#detail4,#detail5').on('inview', function(event, isInView) {
            var targetBottom = $(this).offset().top + $(this).innerHeight()
            var scrollY = window.scrollY
            if (isInView || targetBottom < scrollY - 300) { 
                $(this).addClass('fadeIn')
            }
        })
        $('.case-item').on('click', function(){
            var id = $(this).attr('id')
            $('#modal-'+id).fadeIn(500)
            // $('#modal-case1').fadeIn(500)
        })
        $('.modal-slider > ul').on('click', function(event){
            event.stopPropagation()
        });
        $('.modal').on('click',function(){
            $(this).fadeOut(500)
            $('#overlay').fadeOut(500)
        })
    })
</script>
</body>
</html>