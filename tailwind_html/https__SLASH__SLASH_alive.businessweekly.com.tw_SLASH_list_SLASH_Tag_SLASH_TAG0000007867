        $(function () {
            //搜尋按鈕
            $("#bt_Serach").click(function (event) {
                if ($("#inp_KeyWord").val().trim() == "") {
                    alert("請至少輸入一個關鍵字!");
                    event.preventDefault();
                }
                else {
                    event.preventDefault();

                   
                    url = "/list/Search?ID=" + encodeURIComponent($("#inp_KeyWord").val().trim());
                    console.log(url)
                    window.location = url;
                }
            });
        })
        
