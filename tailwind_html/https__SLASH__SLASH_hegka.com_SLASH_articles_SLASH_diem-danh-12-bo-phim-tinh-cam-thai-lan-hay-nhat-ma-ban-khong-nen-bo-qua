<script>
    function formatNumber(n) {
        // format number 1000000 to 1,234,567
        if( n.length > 1 && n.charAt(0) == 0 )
        {
            n = n.slice( 1 );
        }
        return n.replace(/\D/g, "").replace(/\B(?=(\d{3})+(?!\d))/g, ",")
    }

    function formatCurrency(input, blur) {
        // appends $ to value, validates decimal side
        // and puts cursor back in right position.

        // get input value
        var input_val = input.val();

        // don't validate empty input
        if (input_val === "") {
            return;
        }

        // original length
        var original_len = input_val.length;

        if( original_len > 1 && input_val.charAt(0) == 0 )
        {
            input_val = input_val.slice( 1 );
        }

        // initial caret position
        var caret_pos = input.prop("selectionStart");

        // check for decimal

        // get position of first decimal
        // this prevents multiple decimals from
        // being entered

        // split number by decimal point
        var left_side = input_val.substring(0);

        // add commas to left side of number
        left_side = formatNumber(left_side);

        // join number by .
        input_val = left_side;

        // send updated string to input
        input.val(input_val);

        // put caret back in the right position
        var updated_len = input_val.length;
        caret_pos = updated_len - original_len + caret_pos;
        input[0].setSelectionRange(caret_pos, caret_pos);
    }
    var adsTitle = 'Cuộn để tiếp tục với nội dung'
    $(function () {
        $(document).on('click', '.mobile-header .back-previous', function () {
            window.history.back();
        })
        var regexPhone = {
            phone: /^1?(\d{3})(\d{3})(\d{4})$/,
        };
        $(document).on('keyup', 'input[name=phone]', function () {
            var element = $(this).parent().parent().find('.text-danger.error.phone-error');
            if (validatePhone($(this).val(), $(this))) {
                element.remove()
            } else {
                if (element.length >= 1) {
                    element.html('Số điện thoại không hợp lệ')
                } else {
                    $(this).parent().parent().append('<span class="text-danger error phone-error small">Số điện thoại không hợp lệ</span>');
                }
            }
        })

        // Custom phone number validation
        function validatePhone(value, el) {
            // Normalize value
            value = $.trim(value).replace(/\D/g, '');
            el.val(value);
            // Validate!
            var re = regexPhone.phone,
                isValid = value.length > 7 && re.test(value);
            if (isValid) {
                // Output nicely formatted US phone number
                return true;
            }
            return isValid;
        }
        
        

        
        
        
        
        
        
        

        
        
