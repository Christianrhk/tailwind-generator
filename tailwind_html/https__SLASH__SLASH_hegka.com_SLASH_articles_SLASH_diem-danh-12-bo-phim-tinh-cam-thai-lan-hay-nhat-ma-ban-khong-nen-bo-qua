            spacing: 10,
            z_index: 1031,
            type: event.detail.type,
            timer: time,
            delay: time,
            animate: {
                enter: 'animated fadeInDown',
                exit: 'animated fadeOutUp'
            },
            icon_type: 'class',
        });
        temp.remove()
    })

    $(document).on("hidden.bs.modal", '#article-embed', function () {
        $('#article-embed .btn-show-option').removeClass('d-none');
        $('#article-embed .embed-option').addClass('d-none');
    });

</script>

<script type="text/javascript">

    $(document).ready(function () {
        window.livewire.on('modalArticleUpdate', (e) => {
            var groupId = e.groupId;
            var tags = e.tags;
            var image = e.image;

            editorArticleEdit.setData(e.content);
            $('#editArticle .form-select').val(groupId).trigger('change');
            $('#editArticle .tags .select-tags').select2({
                data:tags,
                tags: true,
                ajax: {
                    url: 'https://hegka.com/hash-tags/search',
                    data: function (params) {
                        var query = {
                            search: params.term,
                            type: 'public'
                        }

                        // Query parameters will be ?search=[term]&type=public
                        return query;
                    },
                    processResults: function (data) {
                        return {
                            results: $.map(data, function (item) {
                                return {
                                    text: item.name,
                                    id: item.id
                                }
                            })
                        };
                    },
                    cache: true
                },
                allowClear: true
            });
            $('#editDraftArticle .tags .select-tags').select2({
                data:tags,
                allowClear: true,
                tags: true,
                ajax: {
                    url: 'https://hegka.com/hash-tags/search',
                    data: function (params) {
                        var query = {
                            search: params.term,
                            type: 'public'
                        }

                        // Query parameters will be ?search=[term]&type=public
                        return query;
                    },
                    processResults: function (data) {
                        return {
                            results: $.map(data, function (item) {
                                return {
                                    text: item.name,
                                    id: item.id
                                }
                            })
                        };
                    },
                    cache: true
                },
            });

            $('#editArticle .image-input-wrapper-preview')
                .css('background-image', 'url(' + image + ')')
                .css('background-size', 'contain')
                .css('background-position', 'center')
            if ( image != null && image.length > 0) {
                $('#editArticle .image-edit-article-change').addClass('d-none')
                $('#editArticle .image-edit-article-delete').removeClass('d-none')
            }
        })
        window.livewire.on('modalDraftArticleUpdate', (e) => {
            var groupId = e.groupId;
            var tags = e.tags;
            var image = e.image;

            editorDraftArticleEdit.setData(e.content);
            $('#editDraftArticle .form-select').val(groupId).trigger('change');
            $('#editDraftArticle .tags .select-tags').select2({
                data:tags,
                allowClear: true,
                tags: true,
                ajax: {
                    url: 'https://hegka.com/hash-tags/search',
                    data: function (params) {
                        var query = {
                            search: params.term,
                            type: 'public'
                        }

                        // Query parameters will be ?search=[term]&type=public
                        return query;
                    },
                    processResults: function (data) {
                        return {
                            results: $.map(data, function (item) {
                                return {
                                    text: item.name,
                                    id: item.id
                                }
                            })
                        };
                    },
                    cache: true
                },
            });
            $('#editDraftArticle .tags .select-tags').select2({
                data:tags,
                allowClear: true,
                tags: true,
                ajax: {
                    url: 'https://hegka.com/hash-tags/search',
                    data: function (params) {
                        var query = {
                            search: params.term,
                            type: 'public'
                        }

                        // Query parameters will be ?search=[term]&type=public
                        return query;
                    },
                    processResults: function (data) {
                        return {
                            results: $.map(data, function (item) {
                                return {
                                    text: item.name,
                                    id: item.id
                                }
                            })
                        };
                    },
                    cache: true
                },
            });

            $('#editDraftArticle .image-input-wrapper-preview')
                .css('background-image', 'url(' + image + ')')
                .css('background-size', 'contain')
                .css('background-position', 'center')
            if ( image != null && image.length > 0) {
                $('#editDraftArticle .image-edit-article-change').addClass('d-none')
                $('#editDraftArticle .image-edit-article-delete').removeClass('d-none')
                $('#editDraftArticle .preview .preview-image .image').attr('src', image)
            } else {
                $('#editDraftArticle .preview .preview-image').remove()
            }
        })

        window.livewire.on('modalUpdateRecruitment', (e) => {
            var image = e.image;
            var companyId =e.company_id;
            var companies =e.companies;
            var location= e.location;
            var workplace = e.workplace;
            var type = e.type;
            var experience = e.experience;
            var salary_type = e.salary_type;
            var group_id = e.group_id;
            var salary_min = e.salary_min;
            var salary_max = e.salary_max;
            var district_id = e.district_id;
            let locations = e.locations;
            var districts = e.districts;
            // var skill_required = e.skill_required;
            // var skills = e.skills;
            // var skillData = '';
            $('#form-update-job  select.form-select.company').select2({
                data: companies,
                allowClear: true
            });

            recruitmentDescriptionUpdate.setData(e.description);

            if (salary_type == 'competitive') {
                $('#form-update-job .salary_max').val(0).attr('disabled', true)
                $('#form-update-job .salary_min').val(0).attr('disabled', true)
            } else {
                $('#form-update-job .salary_max').removeAttr('disabled')
                $('#form-update-job .salary_min').removeAttr('disabled')
            }
            $('#form-update-job select.form-select.company').val(companyId).trigger('change');
            $('#form-update-job .form-select.salary-type').val(salary_type).trigger('change');
            $('#form-update-job input.salary_min').val(formatNumber(salary_min.toString()));
            $('#form-update-job input.salary_max').val(formatNumber(salary_max.toString()));
            $('#form-update-job .form-select.type').val(type).trigger('change');
            $('#form-update-job .form-select.experience').val(experience).trigger('change');
            $('#form-update-job .form-select.workplace').val(workplace).trigger('change');
            $('#form-update-job .form-select.group-id').val(group_id).trigger('change');
            $('#form-update-job select.district').select2({
                data: districts,
                allowClear: true
            });
            $('#form-update-job select.location').select2({
                data:locations,
                allowClear: true
            });
            $('#form-update-job .form-select.location').val(location).trigger('change');
            $('#form-update-job .form-select.district').val(district_id).trigger('change');
            $('#form-update-job .job-image-preview .job-image').attr('src', image);
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            

            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            if ( image != null && image.length > 0) {
                $('#editArticle .image-edit-recruitment-change').addClass('d-none')
                $('#editArticle .image-edit-recruitment-delete').removeClass('d-none')
            }

        })

    });

    // Xóa tiêu đề
    // $(document).on('click', '.new-post-content', function () {
    //     $(this).find('span.placeholder').remove();
    // })
    $(document).on('focusout', '.new-post-content', function () {
        var element = $(this);
        if (!element.text().replace(" ", "").length) {
            element.empty();
        }
    })


    // Thêm image|video cho bài post
    $(document).on('change', '.new-post-dashboard #image-new-post', function () {
        // Livewire.emitTo('user.articles.create', 'resetVideo')
        // $('.new-post-dashboard #form-create-article .new-post-video').addClass('d-none');
        // $('.new-post-dashboard #form-create-article #video').html('');
        var data = $(this).data('image');
        $('.new-post-dashboard .new-post-image[data-image="' + data + '"]').removeClass('d-none');
    })

    $(document).on('click', '.new-post-dashboard .image-new-post-delete', function () {
        var data = $(this).data('image');
        $('.new-post-dashboard .new-post-image[data-image="' + data + '"]').addClass('d-none');
        Livewire.emitTo('user.articles.create', 'resetImage')
    })

    $(document).on('click', '#author-editor #nav-article #form-create-post-article .image-new-article-delete', function () {
        Livewire.emitTo('user.articles.create-article', 'resetImage')
    })

    $(document).on('click', '#editArticle .image-edit-article-delete', function () {
        $('#editArticle .image-edit-article-change').addClass('d-none')
        $('#editArticle .image-edit-article-delete').removeClass('d-none')
        Livewire.emitTo('user.articles.edit-article', 'deleteImage')
    })
    $(document).on('click', '#editArticle.image-edit-article-change', function () {
        $('#editArticle .image-edit-article-delete').addClass('d-none')
        $('#editArticle .image-edit-article-change').removeClass('d-none')
        Livewire.emitTo('user.articles.edit-article', 'deleteImage')
    })

    $(document).on('change', '.new-post-dashboard #video-new-post', function () {
        Livewire.emitTo('user.articles.create', 'resetImage')
        $('.new-post-dashboard .new-post-image').addClass('d-none');
        var data = $(this).data('video');
        $('.new-post-dashboard .new-post-video[data-video="' + data + '"]').removeClass('d-none');
        const video = document.getElementById('video');
        // const video = $('.new-post-dashboard #video');
        const videoSource = document.createElement('source');
        const files = this.files || [];
        if (!files.length) return;

        const reader = new FileReader();

        reader.onload = function (e) {
            videoSource.setAttribute('src', e.target.result);
            video.appendChild(videoSource);
            video.load();
            video.play();
        };

        reader.onprogress = function (e) {
            // console.log('progress: ', Math.round((e.loaded * 100) / e.total));
        };

        reader.readAsDataURL(files[0]);
    })

    $(document).on('click', '.new-post-dashboard .video-new-post-delete', function () {
        var data = $(this).data('video');
        // $('.new-post-dashboard .new-post-video[data-video="' + data + '"]').addClass('d-none');
        // $('.new-post-dashboard #video').html('');
        // Livewire.emitTo('user.articles.create', 'resetVideo')
    })


    $(document).on('paste', '#form-create-article .new-post-content', function (event) {
        var oEvent = event.originalEvent;
        // if (event.preventDefault())
        //     event.preventDefault();

        var clipText = '';
        if(window.clipboardData){
            clipText = window.clipboardData.getData('Text');
        }else if(typeof oEvent == 'object' && oEvent.clipboardData){
            clipText = oEvent.clipboardData.getData('text/plain');
        }
        Livewire.emitTo('user.articles.create', 'setContent', clipText)
    })


    $(document).on('keypress', '#form-create-article .new-post-content', function () {
        var $this = $(this);
        setTimeout(function () {
            var content = $this.html();
            Livewire.emitTo('user.articles.create', 'setContent', content)
        }, 100);
    })

    $(document).on('click', '#form-create-article .remove .icon-remove', function () {
        Livewire.emitTo('user.articles.create', 'resetShare')
    })

    $(document).on('click', '#form-create-article .submit-btn .btn-share', function () {
        var content = $('#form-create-article .new-post-content').html();
        Livewire.emitTo('user.articles.create', 'setContent', content)
        var element = $(this).parent().find('button[type="submit"]');
        setTimeout(function () {
            element.click()
        }, 1000);
    })

    /// Edit article
    $(document).on('click', '.edit-post-content', function () {
        $(this).find('span.placeholder').remove();
    })

    $(document).ready(function () {
        window.livewire.on('updatePostModalHide', (e) => {
            $('#post_modal_update').modal('hide');
        })
        window.livewire.on('createPostModalHide', (e) => {
            $('#author-editor').modal('hide');
            $('#mobile_create_post').modal('hide');
        })
        window.livewire.on('modalUpdatePost', (e) => {
            $('#post_modal_update #createPost .new-post-video').addClass('d-none');
            $('#post_modal_update #createPost .new-post-image').addClass('d-none');
            $('#post_modal_update #createPost .edit-post-content').html('')
            $('#post_modal_update #createPost .new-post-image.image-input-wrapper').css("background-image", '');
            $('#post_modal_update #createPost .new-post-video #video-edit').html('');
            var image = e.image;
            var extension = e.extension;
            var content = e.content;
            if ( content != null && content.length > 0) {
                $('#post_modal_update #createPost .edit-post-content').html(content);
            } else {
                $('#post_modal_update #createPost .edit-post-content').html('<span class="placeholder text-gray-500 ">Bạn đang nghĩ gì thế?</span>');
            }
            if ( e.image !== null && e.image.length > 0) {
                const extensions = ['mp4', 'ogx', 'oga', 'ogv', 'ogg', 'webm'];
                if(extensions.includes(extension)) {
                    $('#post_modal_update #createPost .new-post-video #video-edit').append('<source src="' + image + '">');
                    const video = document.getElementById('video-edit');
                    video.load();
                    // video.play();
                    $('#post_modal_update #createPost .new-post-video').removeClass('d-none');
                } else {
                    $('#post_modal_update #createPost .new-post-image').removeClass('d-none');
                    $('#post_modal_update #createPost .new-post-image .image-input-wrapper').css("background-image", 'url(' + image + ')');
                }
            }
        });
    });
    $(document).on('change', '#post_modal_update #createPost #image-edit-post', function () {
        Livewire.emitTo('user.articles.edit', 'resetVideo')
        document.getElementById('video-edit').pause();
        $('#post_modal_update #createPost .new-post-video').addClass('d-none');
        $('#post_modal_update #createPost #video-edit').html('');
        var data = $(this).data('image');
        $('#post_modal_update #createPost .new-post-image[data-image="' + data + '"]').removeClass('d-none');
    })

    $(document).on('click', '#post_modal_update #createPost .image-new-post-delete', function () {
        var data = $(this).data('image');
        $('#post_modal_update #createPost .new-post-image[data-image="' + data + '"]').addClass('d-none');
        Livewire.emitTo('user.articles.edit', 'resetImage')
    })
    $(document).on('change', '#post_modal_update #createPost #video-edit-post', function () {
        Livewire.emitTo('user.articles.edit', 'resetImage')
        $('#post_modal_update #createPost .new-post-image').addClass('d-none');
        var data = $(this).data('video');
        $('#post_modal_update #createPost .new-post-video[data-video="' + data + '"]').removeClass('d-none');
        const video = document.getElementById('video-edit');
        const videoSource = document.createElement('source');
        const files = this.files || [];
        if (!files.length) return;

        const reader = new FileReader();

        reader.onload = function (e) {
            videoSource.setAttribute('src', e.target.result);
            video.appendChild(videoSource);
            video.load();
            video.play();
        };

        reader.onprogress = function (e) {
            // console.log('progress: ', Math.round((e.loaded * 100) / e.total));
        };

        reader.readAsDataURL(files[0]);
    })

    $(document).on('click', '#post_modal_update #createPost .video-new-post-delete', function () {
        var data = $(this).data('video');
        document.getElementById('video-edit').pause();
        $('#post_modal_update #createPost .new-post-video[data-video="' + data + '"]').addClass('d-none');
        $('#post_modal_update #createPost #video-edit').html('');
        Livewire.emitTo('user.articles.edit', 'resetVideo')
    })

