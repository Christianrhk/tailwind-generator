<script>
    var hashTag = [];
    $(document).ready(function () {
        $("input[data-type='currency']").on({
            keyup: function () {
                formatCurrency($(this));
            },
            blur: function () {
                formatCurrency($(this), "blur");
            },
            change: function () {
                formatCurrency($(this), "blur");
            }

        });

        $.ajax({
            url: "https://hegka.com/hash-tag",
            type: "POST",
            data: {
                "_token": "zdjxaDfh9XeRC8PBaN9LlxWnPz3uH1kQjcRJWSxi",
            },
            success: function (dataResult) {
                hashTag = dataResult.hashTags;
            }
        });

    });

</script>
<script>window.twttr = (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0],
            t = window.twttr || {};
        if (d.getElementById(id)) return t;
        js = d.createElement(s);
        js.id = id;
        js.src = "https://platform.twitter.com/widgets.js";
        fjs.parentNode.insertBefore(js, fjs);

        t._e = [];
        t.ready = function (f) {
            t._e.push(f);
        };

        return t;
    }(document, "script", "twitter-wjs"));</script>
<script>
    // $("#post_modal_update").on("show.bs.modal", function () {
    //     Livewire.emit('edit',$('#post_modal_update inputarticle-id').val())
