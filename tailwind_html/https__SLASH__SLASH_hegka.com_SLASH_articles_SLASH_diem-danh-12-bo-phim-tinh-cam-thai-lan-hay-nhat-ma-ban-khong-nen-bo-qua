                    <script>
                var linkBackground = 'https://bit.ly/3JRXE0Q'
                var targetBackground = '_blank'
                // $(document).on('click', '.desktop-ads-container-phone, .mobile-ads-container-phone', function (e) {
                //     e.stopPropagation();
