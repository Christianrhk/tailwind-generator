    $(document).on('click', '#author-editor #nav-article #form-create-post-article .image-new-article-delete', function () {
        Livewire.emitTo('user.articles.create-article', 'resetImage')
    })

    $(document).on('click', '#editArticle .image-edit-article-delete', function () {
        $('#editArticle .image-edit-article-change').addClass('d-none')
        $('#editArticle .image-edit-article-delete').removeClass('d-none')
        Livewire.emitTo('user.articles.edit-article', 'deleteImage')
    })
    $(document).on('click', '#editArticle.image-edit-article-change', function () {
        $('#editArticle .image-edit-article-delete').addClass('d-none')
        $('#editArticle .image-edit-article-change').removeClass('d-none')
        Livewire.emitTo('user.articles.edit-article', 'deleteImage')
    })

    $(document).on('change', '.new-post-dashboard #video-new-post', function () {
        Livewire.emitTo('user.articles.create', 'resetImage')
        $('.new-post-dashboard .new-post-image').addClass('d-none');
        var data = $(this).data('video');
        $('.new-post-dashboard .new-post-video[data-video="' + data + '"]').removeClass('d-none');
        const video = document.getElementById('video');
        // const video = $('.new-post-dashboard #video');
        const videoSource = document.createElement('source');
        const files = this.files || [];
        if (!files.length) return;

        const reader = new FileReader();

        reader.onload = function (e) {
            videoSource.setAttribute('src', e.target.result);
            video.appendChild(videoSource);
            video.load();
            video.play();
        };

        reader.onprogress = function (e) {
            // console.log('progress: ', Math.round((e.loaded * 100) / e.total));
        };

        reader.readAsDataURL(files[0]);
    })

    $(document).on('click', '.new-post-dashboard .video-new-post-delete', function () {
        var data = $(this).data('video');
        // $('.new-post-dashboard .new-post-video[data-video="' + data + '"]').addClass('d-none');
        // $('.new-post-dashboard #video').html('');
        // Livewire.emitTo('user.articles.create', 'resetVideo')
    })


    $(document).on('paste', '#form-create-article .new-post-content', function (event) {
        var oEvent = event.originalEvent;
        // if (event.preventDefault())
        //     event.preventDefault();

        var clipText = '';
        if(window.clipboardData){
            clipText = window.clipboardData.getData('Text');
        }else if(typeof oEvent == 'object' && oEvent.clipboardData){
            clipText = oEvent.clipboardData.getData('text/plain');
        }
        Livewire.emitTo('user.articles.create', 'setContent', clipText)
    })


    $(document).on('keypress', '#form-create-article .new-post-content', function () {
        var $this = $(this);
        setTimeout(function () {
            var content = $this.html();
            Livewire.emitTo('user.articles.create', 'setContent', content)
        }, 100);
    })

    $(document).on('click', '#form-create-article .remove .icon-remove', function () {
        Livewire.emitTo('user.articles.create', 'resetShare')
    })

    $(document).on('click', '#form-create-article .submit-btn .btn-share', function () {
        var content = $('#form-create-article .new-post-content').html();
        Livewire.emitTo('user.articles.create', 'setContent', content)
        var element = $(this).parent().find('button[type="submit"]');
        setTimeout(function () {
            element.click()
        }, 1000);
    })

    /// Edit article
    $(document).on('click', '.edit-post-content', function () {
        $(this).find('span.placeholder').remove();
    })

    $(document).ready(function () {
        window.livewire.on('updatePostModalHide', (e) => {
            $('#post_modal_update').modal('hide');
        })
        window.livewire.on('createPostModalHide', (e) => {
            $('#author-editor').modal('hide');
            $('#mobile_create_post').modal('hide');
        })
        window.livewire.on('modalUpdatePost', (e) => {
            $('#post_modal_update #createPost .new-post-video').addClass('d-none');
            $('#post_modal_update #createPost .new-post-image').addClass('d-none');
            $('#post_modal_update #createPost .edit-post-content').html('')
            $('#post_modal_update #createPost .new-post-image.image-input-wrapper').css("background-image", '');
            $('#post_modal_update #createPost .new-post-video #video-edit').html('');
            var image = e.image;
            var extension = e.extension;
            var content = e.content;
            if ( content != null && content.length > 0) {
                $('#post_modal_update #createPost .edit-post-content').html(content);
            } else {
                $('#post_modal_update #createPost .edit-post-content').html('<span class="placeholder text-gray-500 ">Bạn đang nghĩ gì thế?</span>');
            }
            if ( e.image !== null && e.image.length > 0) {
                const extensions = ['mp4', 'ogx', 'oga', 'ogv', 'ogg', 'webm'];
                if(extensions.includes(extension)) {
                    $('#post_modal_update #createPost .new-post-video #video-edit').append('<source src="' + image + '">');
                    const video = document.getElementById('video-edit');
                    video.load();
                    // video.play();
                    $('#post_modal_update #createPost .new-post-video').removeClass('d-none');
                } else {
                    $('#post_modal_update #createPost .new-post-image').removeClass('d-none');
                    $('#post_modal_update #createPost .new-post-image .image-input-wrapper').css("background-image", 'url(' + image + ')');
                }
            }
        });
    });
    $(document).on('change', '#post_modal_update #createPost #image-edit-post', function () {
        Livewire.emitTo('user.articles.edit', 'resetVideo')
        document.getElementById('video-edit').pause();
        $('#post_modal_update #createPost .new-post-video').addClass('d-none');
        $('#post_modal_update #createPost #video-edit').html('');
        var data = $(this).data('image');
        $('#post_modal_update #createPost .new-post-image[data-image="' + data + '"]').removeClass('d-none');
    })

    $(document).on('click', '#post_modal_update #createPost .image-new-post-delete', function () {
        var data = $(this).data('image');
        $('#post_modal_update #createPost .new-post-image[data-image="' + data + '"]').addClass('d-none');
        Livewire.emitTo('user.articles.edit', 'resetImage')
    })
    $(document).on('change', '#post_modal_update #createPost #video-edit-post', function () {
        Livewire.emitTo('user.articles.edit', 'resetImage')
        $('#post_modal_update #createPost .new-post-image').addClass('d-none');
        var data = $(this).data('video');
        $('#post_modal_update #createPost .new-post-video[data-video="' + data + '"]').removeClass('d-none');
        const video = document.getElementById('video-edit');
        const videoSource = document.createElement('source');
        const files = this.files || [];
        if (!files.length) return;

        const reader = new FileReader();

        reader.onload = function (e) {
            videoSource.setAttribute('src', e.target.result);
            video.appendChild(videoSource);
            video.load();
            video.play();
        };

        reader.onprogress = function (e) {
            // console.log('progress: ', Math.round((e.loaded * 100) / e.total));
        };

        reader.readAsDataURL(files[0]);
    })

    $(document).on('click', '#post_modal_update #createPost .video-new-post-delete', function () {
        var data = $(this).data('video');
        document.getElementById('video-edit').pause();
        $('#post_modal_update #createPost .new-post-video[data-video="' + data + '"]').addClass('d-none');
        $('#post_modal_update #createPost #video-edit').html('');
        Livewire.emitTo('user.articles.edit', 'resetVideo')
    })

    $(document).on('click', '#post_modal_update #createPost .btn-share', function () {
        var content = $('#post_modal_update #createPost .edit-post-content').html();
        Livewire.emitTo('user.articles.edit', 'setContent', content)
        var element = $(this).parent().find('button[type="submit"]');
        setTimeout(function () {
            element.click()
        }, 1000);
    })

    $(document).on('keypress', '#post_modal_update #createPost .edit-post-content', function () {
        var $this = $(this);
        setTimeout(function () {
            var content = $this.html();
            Livewire.emitTo('user.articles.edit', 'setContent', content)
        }, 100);
    })

    $(document).on('paste', '#form-create-article .edit-post-content', function (event) {
        var oEvent = event.originalEvent;
        // if (event.preventDefault())
        //     event.preventDefault();

        var clipText = '';
        if(window.clipboardData){
            clipText = window.clipboardData.getData('Text');
        }else if(typeof oEvent == 'object' && oEvent.clipboardData){
            clipText = oEvent.clipboardData.getData('text/plain');
        }
        Livewire.emitTo('user.articles.edit', 'setContent', clipText)
    })

    $(document).on('click', '#post_modal_update #createPost .remove .icon-remove', function () {
        Livewire.emitTo('user.articles.edit', 'resetShare')
    })

    $(document).on('click', '#post_modal_update #createPost .btn-share', function () {
        var content = $('#post_modal_update #createPost .edit-post-content').html();
        Livewire.emitTo('user.articles.edit', 'setContent', content)
        var element = $(this).parent().find('button[type="submit"]');
        setTimeout(function () {
            element.click()
        }, 1000);
    })

    $("#post_modal_update").on("hidden.bs.modal", function () {
        document.getElementById('video-edit').pause();
        Livewire.emitTo('user.articles.create', 'cancel')
        Livewire.emitTo('user.articles.create-article', 'cancel')
    })
    $("#author-editor").on("show.bs.modal", function () {
        $('#author-editor #deal_date').val('');
        checkEditorChange = 0;
        var lengthCkEditor = $('#form-create-job #description-container .ck.ck-reset.ck-editor.ck-rounded-corners').length;
        if(lengthCkEditor >1)
        {
            for(let i = 1; i < lengthCkEditor; i++) {
                $('#form-create-job #description-container .ck.ck-reset.ck-editor.ck-rounded-corners:eq(0)').remove()
            }
        }
        $('#author-editor').remove('full-screen');
        $('#author-editor .ck.ck-toolbar__items .editor-zoom-in').remove();
        $('#author-editor .ck.ck-toolbar__items .editor-zoom-out').remove();
        $('#author-editor .ck.ck-toolbar__items').append('<button class="ck ck-button ck-off editor-zoom-out" type="button" tabindex="-1">' +
            '<!--begin::Svg Icon | path: assets/media/icons/duotone/Design/ZoomMinus.svg-->\n' +
