	window.addEventListener('DOMContentLoaded', (event) => {
		const heightch = document.querySelector(".heightch");

		const resizeObserver = new ResizeObserver((entries) => {
			entries.forEach(entry => {
				if (entry.contentRect.height < 100) {
					entry.target.classList.remove("heightfix");
					document.getElementById("headerarea").style.position = 'fixed';
					document.getElementById("headerarea").style.background = 'transparent';
					var closemenu = document.getElementById("iva-open-menu");
					closemenu.setAttribute("id","opened-menu");
					document.getElementById("main").style.display = 'block';
				} else {
					entry.target.classList.add("heightfix");
					var openmenu = document.getElementById("opened-menu");
					openmenu.setAttribute("id","iva-open-menu");
					document.getElementById("headerarea").style.background = '#252525';
					document.getElementById("headerarea").style.position = 'relative';
					document.getElementById("main").style.display = 'none';
				}
			});
		});

		resizeObserver.observe(heightch);
		//document.getElementById("ivaSearchbar").style.display = 'none';
		/* Searchbar Pop-up       */
        /* ====================== */
        $('#ivaSearch').on("click", function(e) {
            if ($(e.srcElement).closest('#ivaSearchbar').length) return;
            $('#ivaSearchbar').slideDown(300);
            $('#ivaSearchbar input[type=text]').focus();
            return false;
        });

        $('.search-close').on("click", function(e) {
            jQuery('#ivaSearchbar').slideUp(300);
        });

        $('body').on("click", function(e) {
            var target = $(e.target);
            if (!target.is(".ivaInput")) {
                jQuery('#ivaSearchbar').slideUp(300);
            }
        });
		
	});
