	var win = $(this); //this = window
	//if (win.height() >= 820) { /* ... */ }
	
	if (win.width() <= 1000) {$('.news-article-filters').addClass('news-article-filter-mobile-menu');}
	$(window).on('resize', function(){
		var win = $(this); //this = window
		//if (win.height() >= 820) { /* ... */ }
		if (win.width() > 1000) {
			$('.news-article-filters').removeClass('news-article-filter-mobile-menu');
			$('.news-article-filter-mobile-menu .news-article-filter-menu').show();
		}
		if (win.width() <= 1000) {
			if(!$('.news-article-filters').hasClass('news-article-filter-mobile-menu')){$('.news-article-filters').addClass('news-article-filter-mobile-menu');}
		}
	});
	$('.news_filter_burger_menu').on('click touch',function(){
		$('.news-article-filter-mobile-menu .news-article-filter-menu').fadeToggle();
	});



	});


