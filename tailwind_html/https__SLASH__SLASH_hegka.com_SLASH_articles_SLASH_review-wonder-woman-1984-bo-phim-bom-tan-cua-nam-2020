    $("#editDraftArticle").on("show.bs.modal", function () {
        $('#editDraftArticle').remove('full-screen');
        $('#editDraftArticle .ck.ck-toolbar__items .editor-zoom-in').remove();
        $('#editDraftArticle .ck.ck-toolbar__items .editor-zoom-out').remove();
