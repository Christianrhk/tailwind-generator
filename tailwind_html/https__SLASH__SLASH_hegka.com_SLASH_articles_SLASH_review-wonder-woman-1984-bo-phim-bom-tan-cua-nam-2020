te_type&quot;:0}],&quot;banner_left&quot;:&quot;\/images\/left-banner.png&quot;,&quot;banner_right&quot;:&quot;\/images\/right-banner.png&quot;,&quot;banner_top&quot;:&quot;\/images\/top-banner.png&quot;,&quot;background_desktop&quot;:&quot;\/images\/BG.png&quot;},&quot;dataMeta&quot;:{&quot;models&quot;:{&quot;article&quot;:{&quot;class&quot;:&quot;App\\Models\\Article&quot;,&quot;id&quot;:1458,&quot;relations&quot;:[&quot;user&quot;,&quot;comments&quot;,&quot;group&quot;,&quot;tagRelationship&quot;,&quot;tagRelationship.translations&quot;],&quot;connection&quot;:&quot;mysql&quot;}}},&quot;checksum&quot;:&quot;74ab35115253198141f71fd8d7a431778add684bfecac02df8ea15d4533dfedc&quot;}}"><!--begin::Post-->
