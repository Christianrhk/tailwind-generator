    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // setup side popups
            var menu = document.querySelectorAll('#header-menu')
            M.Sidenav.init(menu, {edge: "left"});

            // collapse extra questions
            document.getElementById('extra-question-button')?.addEventListener('click', function(){
                var nodes = Array.prototype.slice.call(document.querySelectorAll('.extra-question'),0);
                nodes.forEach(function(elem, index){
                    elem.classList.toggle("visible");
                });
            })

            // smooth scroll
            var moveTo = new MoveTo();
            var elems = document.getElementsByClassName('moveto');
            for(var i=0; i<elems.length; ++i){
                moveTo.registerTrigger(elems[i]);
            }
        });
    </script>
