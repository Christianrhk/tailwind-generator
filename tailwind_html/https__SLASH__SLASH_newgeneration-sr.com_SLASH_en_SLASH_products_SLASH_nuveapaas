<script>
function clickme(index){
    let div = document.getElementById('div_'+index)
    let span = div.parentElement.lastElementChild

    div.classList.toggle('close')
    div.classList.toggle('open')
    
    if(!div.classList.contains('close')){
        span.innerHTML = "Collpase"
    }
    else {
        span.innerHTML = "Expand"
    }
}
</script>

