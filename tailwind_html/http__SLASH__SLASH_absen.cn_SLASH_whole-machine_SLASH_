  <script src="scripts/jquery.min.js"></script>
  <script src="scripts/anime.min.js"></script>
  <script src="scripts/scrollreveal.min.js"></script>
  <script src="scripts/splide.min.js"></script>
  <script>
    (function () {
      const splide_person = new Splide('.splide-person', {
        fixedWidth: 384, gap: 24, arrows: false, pagination: false, type: 'loop',
        autoplay: true, interval: 2000,
        breakpoints: {
          1024: { fixedWidth: 288 }
        }
      });

      splide_person.mount();

      function togglePerson(ev) {
        $(this)[ev.type == 'mouseleave' || ev.type == 'mouseout' ? 'removeClass' : 'toggleClass']('hover');
      }
      if ('ontouchstart' in document.documentElement) {
        $('.person').on({ click: togglePerson });
      } else {
        $('.person').on({
          click: togglePerson,
          mouseenter: togglePerson,
          mouseleave: togglePerson
        });
      }

      $('#pullup').on({
        click: function () {
          anime({ targets: [document.body, document.documentElement], scrollTop: 0, easing: 'easeInOutCubic', duration: 1500 })
        }
      })

      window.addEventListener('load', function () {
        const easeOutQuart = 'cubic-bezier(0.25, 1, 0.5, 1)';
        const linear = 'cubic-bezier(0, 0, 1, 1)';

        function numberRollingBeforeReveal(el) {
          $(el.querySelectorAll('.number-rolling')).each((i, el) => {
            el._textContent = el.textContent;
            el.textContent = 0;
          });
        }

        function numberRollingAfterReveal(el) {
          $(el.querySelectorAll('.number-rolling')).each((i, el) => {
            anime({
              targets: el,
              easing: 'easeOutCubic',
              duration: 3000,
              round: true,
              textContent: function (tar) {
                return tar._textContent;
              }
            })
          })
        }

        const sr = ScrollReveal();

        // 滑入
        sr.reveal('.slide-in', {
          duration: 500,
          easing: 'ease',
          // viewOffset: { bottom: offset },
          interval: 125,
          // viewFactor: 0.25,
          distance: '16px',
          delay: 250,
          origin: 'bottom',
          beforeReveal: numberRollingBeforeReveal,
          afterReveal: numberRollingAfterReveal
        });

        sr.reveal('.float-in', {
          duration: 500,
          easing: 'cubic-bezier(0.33, 1, 0.68, 1)',
          // interval: 125,
          scale: 0.9,
          delay: 250,
          beforeReveal: numberRollingBeforeReveal,
          afterReveal: numberRollingAfterReveal
        });

        sr.reveal('.fade-in', {
          duration: 900,
          easing: 'ease',
          // interval: 125,
          delay: 250,
          beforeReveal: numberRollingBeforeReveal,
          afterReveal: numberRollingAfterReveal
        });

        const videoPlayBtns = $(document.querySelectorAll('.video-play-btn'));
        videoPlayBtns.each((i, e) => {
          let played = false, btn = $(e), wrapper = btn.parent(), video = btn.siblings('video').get(0);

          btn.on({
            click: function () {
              video.play();
            }
          });

          video.addEventListener('play', function () {
            wrapper.addClass('playing');
          });
          video.addEventListener('pause', function () {
            wrapper.removeClass('playing');
          });
        })
      });
    })();
  </script>
</body>

