                                <!--begin::Post content-->
                                <div class="mb-4 container-detail">
                                    <div class="article-content">
                                        <div>
                                            <!--begin::Wrapper-->
                                            <div class="ads-background">
                                                <!--begin::Info-->
                                                <div class="d-flex flex-wrap align-items-center align-content-center justify-content-between mb-8">
                                                    <!--begin::Item-->
                                                    <div class="me-9 my-1">
                                                        <!--begin::Icon-->
                                                        <!--begin::Label-->
                                                        <span class="fw-bolder uppercase text-primary pr-2">
                                                        <strong>Ngon</strong>
