    $(document).ready(function () {
        var open = false;
        var close = false;

        //  end activate from drawer button
        $('#playerSlideButton').click(function () {
            //  $('#playerSlideButton').click(function () {
            // $(".playerSlideButton").each(function () {
            if (open === false) {
                $('#playerSlideContent').animate({ height: '180px' }, 1000); // 135px
                $(this).css('backgroundPosition', 'bottom left');
                $(this).find(".playerArrow").toggleClass('fa fa-caret-up fa-1x fa fa-caret-down fa-1x');
                open = true;
            }
            else {
                $('#playerSlideContent').animate({ height: '-90px' }, 1000); //-65px
                $(this).css('backgroundPosition', 'top left');
                $(this).find(".playerArrow").toggleClass('fa fa-caret-down fa-1x fa fa-caret-up fa-1x');
                open = false;
            }

        });
        //  end activate from drawer button

        //  activate from any button with the same .playerListenButton
        $(document).on('click', '.playerListenButton', function () {
            if (open === false) {
                $('#playerSlideContent').animate({ height: '180px' }, 1000);  // 135px
                $(this).css('backgroundPosition', 'bottom left');
                $(this).find(".listenArrow").toggleClass('fa fa-caret-up fa-1x fa fa-caret-down fa-1x');
                open = true;
            }
            else {
                $('#playerSlideContent').animate({ height: '-90px' }, 1000); //-65px
                $(this).css('backgroundPosition', 'top left');
                $(this).find(".listenArrow").toggleClass('fa fa-caret-down fa-1x fa fa-caret-up fa-1x');
                open = false;
            }

        });
        // end  activate from

    });

    // playerSlide Drawer
</script>




<!-- the forms master -->
<script type="text/javascript">
    function ajaxFormsGuru(args) {
        $(args.form).off('submit');

        $(args.form).on('submit', function (e) {
            e.preventDefault();

            var errorsNum = 0;

            $(args.form).addClass('disabled-loading');
            $(args.msgBeen).removeClass('mx-success-msg');

            args.requireds.map(function (item) {
                if (!$(item).val()) errorsNum++;
            });

            if (args.recaptcha === true) {
                if (!grecaptcha.getResponse()) errorsNum++;
            }

            if (errorsNum === 0) {
                $.ajax({
                    type: $(args.form).attr('method'),
                    url: $(args.form).attr('action'),
                    data: $(args.form).serialize()
                }).done(function () {
                    $(args.msgBeen).addClass('mx-success-msg').html(args.msgSuccess);
                    $(args.form).removeClass('disabled-loading');
                    $(args.form).find('input, textarea, select').val('');
                    if (args.recaptcha === true) {
                        grecaptcha.reset();
                    }
                }).fail(function () {
                    $(args.msgBeen).html('Oops, there was an error!');
                    $(args.form).removeClass('disabled-loading');
                });
            } else {
                $(args.msgBeen).html('Please fill fields carefully!');
                $(args.form).removeClass('disabled-loading');
            }

            return false;
        });
    }
</script>
<!-- //the forms master -->
<!-- get win data --
<script type="text/javascript">
    $(document).ready(function () {
        BindWin();
    });

    function BindWin() {
        $("#WinHandler").on("submit", function (event) {
            event.preventDefault();
            var $this = $(this);
            var frmValues = $this.serialize();

            $.ajax({
                type: $this.attr('method'),
                url: $this.attr('action'),
                data: frmValues
            })
                .done(function () {
                    $("#lblWinHandler").text("Hooray! We have received your entry!");
                })
                .fail(function () {
                    $("#lblWinHandler").text("Oops, there was an error!");
                });

        });
    };
</script>
<!-- // get win data -->
<!-- copy URL
<script type="text/javascript">
    $(document).ready(function () {
        var $temp = $("<input>");
        var $url = $(location).attr('href');

        $('.clipboard').on('click', function () {
            $("body").append($temp);
            $temp.val($url).select();
            document.execCommand("copy");
            $temp.remove();

            // $("p").text("URL copied!");
        });
    });
</script>
<!-- // copy URL -->
<!-- ====== show / hide password ====== -->
<script type="text/javascript">
    function text(label) {
        var input = document.getElementById(label.htmlFor);
        if (input.type === "password") {
            input.type = "text";
            label.innerHTML = "(Hide)";
        } else {
            input.type = "password";
            label.innerHTML = "(Show)";
        }
    }
</script>
<!-- // ====== show / hide password ====== -->
<!-- scripts  TAB Pills 1 -->
<script>
    function MXSetupTabs() {
        var tabPillsOneItems = document.querySelectorAll('.tab-pills-1'),
            itemContents = document.querySelectorAll('.item-content'),
            removeAllActiveStates = function (elementsList) {
                elementsList.forEach((element) => element.classList.remove('active'));
            },
            addHiddenClass = function (elementsList) {
                elementsList.forEach((element) => element.classList.add('hidden'));
            };

        tabPillsOneItems.forEach((tabPill) => {
            tabPill.addEventListener('click', () => {
                removeAllActiveStates(tabPillsOneItems);
                tabPill.classList.add('active');
                addHiddenClass(itemContents);
                const clickedTabContent = document.getElementById(`${tabPill.id}-content`);
                clickedTabContent.classList.remove('hidden');
            });
        });
    }
</script>

<!-- // scripts TAB Pills 1 -->
