    $(".open_press").hide('');

    $(".close_press").click(function() {
        $("#banner_item").addClass("side-active");
        $(".close_press").hide('fast');
        $(".open_press").show('fast');
    });

    $(".open_press").click(function() {    
        $("#banner_item").removeClass("side-active");
        $(".close_press").show('fast');
        $(".open_press").hide('fast');

    });
