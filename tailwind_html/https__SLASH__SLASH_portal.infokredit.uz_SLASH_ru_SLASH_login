        <script>
        $(".toggle-password").click(function() {

            $(this).toggleClass("fa-eye-slash fa-eye");
            var input = $($(this).attr("toggle"));
            if (input.attr("type") == "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }
        });

        $('#login')
            .on('invalid', function () {
                return this.setCustomValidity("Пожалуйста, введите логин");
            })
            .on('input', function () {
                return this.setCustomValidity('');
            });

        $('#password-field')
            .on('invalid', function () {
                return this.setCustomValidity("Поле пароля обязательно для заполнения");
            })
            .on('input', function () {
                return this.setCustomValidity('');
            });
    </script>

