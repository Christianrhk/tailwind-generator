    for (var i = 0; i < XMLHttpFactories.length; i++) {
        try {
            req = XMLHttpFactories[i]();
        }
        catch (e) {
            continue;
        }
        break;
    }
    if (!req) return;
    req.open('GET', "https://www-develop.yogananda.org/pt/actions/queue/run", true);
    if (req.readyState == 4) return;
    req.send();
})();
/*]]>*/
</script>