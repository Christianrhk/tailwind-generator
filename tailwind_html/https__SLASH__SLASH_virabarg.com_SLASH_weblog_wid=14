                                            &#x62F;&#x631; &#x645;&#x648;&#x631;&#x62F; &#x631;&#x633;&#x62A;&#x648;&#x631;&#x627;&#x646; &#x627;&#x642;&#x6CC;&#x627;&#x646;&#x648;&#x633; &#x628;&#x627;&#x6CC;&#x62F; &#x628;&#x6AF;&#x645; &#x6A9;&#x647; &#x62E;&#x6CC;&#x644;&#x6CC; &#x636;&#x639;&#x6CC;&#x641; &#x648; &#x633;&#x646;&#x62A;&#x6CC; &#x6A9;&#x627;&#x631; &#x645;&#x6CC; &#x6A9;&#x646;&#x646;. &#x645;&#x627; &#x631;&#x641;&#x62A;&#x6CC;&#x645; &#x627;&#x648;&#x646;&#x62C;&#x627; 3 &#x686;&#x644;&#x648; &#x628;&#x631;&#x6AF; &#x633;&#x644;&#x637;&#x627;&#x646;&#x6CC; &#x633;&#x641;&#x627;&#x631;&#x634; &#x62F;&#x627;&#x62F;&#x6CC;&#x645;&#x60C; &#x632;&#x645;&#x627;&#x646; &#x633;&#x631;&#x648; &#x628;&#x631;&#x627;&#x6CC; &#x645;&#x627; &#x633;&#x647; &#x62C;&#x648;&#x62C;&#x647; &#x6A9;&#x628;&#x627;&#x628; &#x633;&#x644;&#x637;&#x627;&#x646;&#x6CC; &#x622;&#x648;&#x631;&#x62F;&#x646;. &#x627;&#x632; &#x6AF;&#x627;&#x631;&#x633;&#x648;&#x646; &#x67E;&#x631;&#x633;&#x6CC;&#x62F;&#x645; &#x6A9;&#x647; &#x627;&#x6CC;&#x646; &#x6A9;&#x62C;&#x627;&#x634; &#x628;&#x631;&#x6AF; &#x647;&#x633;&#x62A;. &#x628;&#x631;&#x6AF;&#x634;&#x62A; &#x648; &#x6AF;&#x641;&#x62A; &#x646;&#x62F;&#x627;&#x634;&#x62A;&#x6CC;&#x645; &#x628;&#x647; &#x62C;&#x627;&#x634; &#x627;&#x6CC;&#x646;&#x648; &#x627;&#x648;&#x631;&#x62F;&#x645;.&#xD;&#xA;&#x628;&#x62F;&#x648;&#x646; &#x627;&#x6CC;&#x646;&#x6A9;&#x647; &#x628;&#x647; &#x645;&#x627; &#x628;&#x6AF;&#x646; &#x648; &#x646;&#x638;&#x631;&#x645;&#x648;&#x646; &#x631;&#x648; &#x628;&#x67E;&#x631;&#x633;&#x646; &#x633;&#x631; &#x62E;&#x648;&#x62F; &#x631;&#x641;&#x62A;&#x646; &#x648; &#x6CC;&#x647; &#x686;&#x6CC;&#x632; &#x62F;&#x6CC;&#x6AF;&#x647; &#x627;&#x648;&#x631;&#x62F;&#x646;. &#x6CC;&#x639;&#x646;&#x6CC; &#x627;&#x6AF;&#x647; &#x6AF;&#x634;&#x646;&#x647; &#x646;&#x628;&#x648;&#x62F;&#x6CC;&#x645; &#x62D;&#x62A;&#x645;&#x627; &#x627;&#x648;&#x646;&#x62C;&#x627; &#x631;&#x648; &#x62A;&#x631;&#x6A9; &#x645;&#x6CC; &#x6A9;&#x63