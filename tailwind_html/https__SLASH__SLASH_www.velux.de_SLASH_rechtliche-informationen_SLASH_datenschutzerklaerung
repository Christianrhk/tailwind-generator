x rgba(0, 0, 0, 0.04);}#InstallerChatbot.installer-bubble-open .installer-bubble-shape{padding: 16px 20px; box-sizing: border-box;}#InstallerChatbot .installer-bubble-conversation{display: grid; gap: 20px;}#InstallerChatbot.installer-bubble-loading .installer-bubble-conversation{display: none;}#InstallerChatbot .installer-bubble-question{border-radius: 24px; background: #e00; color: white; padding: 8px 16px; font-weight: 700; max-width: 100%; text-decoration: none; justify-self: left;}#InstallerChatbot .installer-bubble-question:hover{background: #b00;}#InstallerChatbot .installer-bubble-question.installer-bubble-question__show{display: block;}#InstallerChatbot #InstallerChatAvatar{animation: bounce-in-avatar 0s ease;}#InstallerChatbot.installer-bubble-open #InstallerChatAvatar{display: none;}#InstallerChatbot #InstallerChatClose{position: absolute; top: 12px; right: 12px; cursor: pointer; z-index: 10; display: none;}#InstallerChatbot.installer-bubble-open #InstallerChatClose{display: flex;}#InstallerChatbot.installer-bubble-loading #InstallerChatClose{display: none;}#InstallerChatbot #InstallerChatClose:hover svg{animation: rotate-in 0.3s;}#InstallerChatbot #InstallerChatClose:not(:hover) svg{animation: rotate-out 0.3s;}#InstallerChatbot #InstallerChatAvatar svg{transform-origin: bottom right; transform: scale(0.45); filter: drop-shadow(0px 8px 32px rgba(0, 0, 0, 0.32));}#InstallerChatbot #InstallerChatBubble, #InstallerChatbot #InstallerChatAvatar{position: relative; bottom: 0; cursor: pointer;}#InstallerChatbot.installer-bubble-open #InstallerChatBubble, #InstallerChatbot.installer-bubble-open #InstallerChatAvatar{cursor: default;}@media screen and (min-width: 360px){#InstallerChatbot.installer-bubble-open #InstallerChatBubble{padding: 26px;}#InstallerChatbot .installer-bubble-question{max-width: 92%;}}@media screen and (min-width: 640px){#InstallerChatbot{bottom: 32px; right: 32px;}#InstallerChatbot #InstallerChatBubble{max-width: 328px;}#InstallerChatbot.instal