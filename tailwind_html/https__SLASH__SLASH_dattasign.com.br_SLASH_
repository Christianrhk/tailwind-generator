        menu: "close",
        close: "menu",
      };

      buttonMenu.innerText = invertIconMenu[buttonMenu.innerText];
      navBar.classList.toggle("hidden");
    }

    function goToPage(page) {
      window.location.assign(page); 
    }

  </script>

