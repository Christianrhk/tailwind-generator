<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src='https://www.google.com/recaptcha/api.js'></script> 

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>

<script>
    let region            = document.getElementById('region_code');
    let province          = document.getElementById('province_code');
    let city_municipality = document.getElementById('city_municipality_code');
    let barangay          = document.getElementById('barangay_code');

    region.onchange = function()
    {
        axios.get('get/provinces/' + region.value)
            .then(function (response) {
                if(response) {
                    // console.log(response);
                    clearSelect(province);
                    province.innerHTML = "<option value=''>Choose Province...</option>";
                    response.data.forEach(data => {
                        appendToSelect(data.province_code,data.province_description,province);
                    });
                }
            })
            .catch(function (error){
                console.log(error);
            });
    }
    
    province.onchange = function() 
    {
        axios.get('get/city/' + province.value)
            .then(function (response) {
                if(response) {
                    // console.log(response);
                    clearSelect(city_municipality);
                    city_municipality.innerHTML = "<option value=''>Choose City/Municipality...</option>";
                    response.data.forEach(data => {
                        appendToSelect(data.city_municipality_code,data.city_municipality_description,city_municipality);
                    });
                }
            })
            .catch(function (error){
                console.log(error);
            });
    }
    
    city_municipality.onchange = function() 
    {
        axios.get('get/barangay/' + city_municipality.value)
            .then(function (response) {
                if(response) {
                    // console.log(response);
                    clearSelect(barangay);
                    barangay_code.innerHTML = "<option value=''>Choose Barangay...</option>";
                    response.data.forEach(data => {
                        appendToSelect(data.barangay_code,data.barangay_description,barangay_code);
                    });
                }
            })
            .catch(function (error){
                console.log(error);
            });
    }

    function appendToSelect(value, description, parent)
    {
        var element = `<option value='${value}'>${description}</option>`;
        parent.innerHTML += element;
    }

    function clearSelect(select)
    {
        if(select.options.length > 0)
        {
            for(var i = select.options.length - 1 ; i >= 0 ; i--)
            {
                select.remove(i);
            }
        }
    }
</script>
