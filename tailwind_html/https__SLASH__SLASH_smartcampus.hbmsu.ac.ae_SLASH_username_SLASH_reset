<script>
    for (var i = 0; i < 100; i++) {
        var star =
            '<div class="star m-0" style="animation: twinkle ' +
            (Math.random() * 5 + 5) +
            's linear ' +
            (Math.random() * 1 + 1) +
            's infinite; top: ' +
            Math.random() * $(window).height() +
            'px; left: ' +
            Math.random() * $(window).width() +
            'px;"></div>';
        // $('.homescreen').append(star);
    }



    $(function () {

        $('#mobile-error').hide();
        var telInput = document.querySelector("#mobile"),
            telInputJquery = $("#mobile"),
            registrationForm = $("#register-form");

        var iti = window.intlTelInput(telInput, {
            initialCountry: "auto",
            geoIpLookup: function (callback) {
                $.get('https://ipinfo.io', function () {
                }, "jsonp").always(function (resp) {
                    var countryCode = (resp && resp.country) ? resp.country : "";
                    callback(countryCode);
                });
            },
            customPlaceholder: function(selectedCountryPlaceholder, selectedCountryData) {
                return  selectedCountryPlaceholder;
            },
            formatOnDisplay : false,

            separateDialCode: true,
            numberFormat: 'RFC3966',
            nationalMode: true,
            // hiddenInput: "mobile",
            autoPlaceholder: "aggressive",
            preferredCountries: ['AE', 'SA'],
            utilsScript: "/js/utils.js"
        });

        var reset = function () {
            telInput.parsley().removeError('mobileNumberFormatError');
        };

        // on blur: validate
        telInput.blur(function () {
            reset();
            checkValidation();
        });

        registrationForm.submit(function (event) {
            event.preventDefault();
            checkValidation(event);
        });

        function checkValidation(event) {
            $('#mobile-error').hide();
            if ($.trim(telInputJquery.val())) {
                if (iti.isValidNumber()) {
                    if (event) {
                        var telStr =  iti.getNumber(intlTelInputUtils.numberFormat.RFC3966);
                        var tel = telStr.replace("tel:", "") ;
                        telInputJquery.val(tel);
                        registrationForm.unbind('submit').submit();
                    }
                } else {
                    $('#mobile-error').show();
                }
            }
        }

        var tt = setTimeout(function(){
            $('#mobile').css('padding-left','92px');
        },500);
    });
</script>
