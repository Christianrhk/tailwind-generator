    <script>
        (function ($) {
            $.rand = function (arg) {
                if ($.isArray(arg)) {
                    return arg[$.rand(arg.length)];
                } else if (typeof arg === "number") {
                    return Math.floor(Math.random() * arg);
                } else {
                    return 1;
                }
            };
        })(jQuery);

        var items = ["π.χ. μαθηματικά Γ' κεφάλαιο 32", "π.χ. γλώσσα Ε' ενότητα 4 διαγώνισμα",
            "π.χ. κλάσματα επανάληψη Στ'", "π.χ. φυσικά Στ' κεφάλαιο 9", "π.χ. γεωγραφία Στ' ηλιακό σύστημα",
            "π.χ. φυσικά ηλεκτρομαγνητισμός επανάληψη", "π.χ. ιστορία Γ' ενότητα 8 επανάληψη",
            "π.χ. ιστορία τρωικός πόλεμος", "π.χ. Α' αλφαβήτα κάρτες"
        ];
        var item = jQuery.rand(items);

        $('input[name=q]').on("click focus", function () {
            $(this).attr("placeholder", item);

        }).on("blur", function () {
            $(this).attr("placeholder", "Αναζητήστε αρχεία... [πατήστε Esc για συντομία]");

        });
    </script>

    
