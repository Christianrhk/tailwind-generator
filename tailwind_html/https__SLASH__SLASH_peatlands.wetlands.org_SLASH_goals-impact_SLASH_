          <h2 class="font-bold text-lg sm:text-xl md:text-2xl lg:text-3xl pb-2">Safeguarding Peatlands</h2>
        </div>
            <!-- Content Block -->
            <!-- Quote Block -->
            <!-- Highligted Block -->
            <!-- Call to Action -->
