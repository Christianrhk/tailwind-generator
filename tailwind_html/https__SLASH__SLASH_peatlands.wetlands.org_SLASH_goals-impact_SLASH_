      <!-- Title Block -->
            <!-- Content Block -->
            <!-- Quote Block -->
              <div class="content_container mx-auto w-10/12 md:w-8/12 max-w-4xl pt-2 md:pt-4" data-aos="fade-right" data-aos-delay="200">
          <div class="font-normal text-md sm:text-lg md:text-xl lg:text-2xl">
            2030 Objective: Work with intergovernmental agencies and finance institutions to establish mechanisms and mainstream methodologies and standards that enable protection of peat sinks for carbon, while safeguarding and enhancing biodiversity and ecosystem services.          </div>
                  </div>
            <!-- Highligted Block -->
            <!-- Call to Action -->
            <!-- Media / Image / Single -->
            <!-- Media / Image / Slider -->
                  <!-- Media / Video / Single -->
      
