<script>
    const menu = document.getElementById('menu-content');
    let menuOpen = false;
    let mql = window.matchMedia('(min-width: 1024px)');
    let mqlMobile = window.matchMedia('(max-width:700px)');
    mql.addListener(()=> {
      menuOpen = false;
      menu.style.display = 'block';
    });
  
    function toggle () {
      if (!menuOpen) {
        menu.style.display = 'block';
        menuOpen = true;
      } else {
        menu.style.display = 'none';
        menuOpen = false; 
      }
    }
    document.querySelector('#bt-toggle').addEventListener('click', toggle);
</script>
