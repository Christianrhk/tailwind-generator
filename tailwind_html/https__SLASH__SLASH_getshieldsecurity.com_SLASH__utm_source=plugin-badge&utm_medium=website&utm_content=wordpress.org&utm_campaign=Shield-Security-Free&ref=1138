            var body = jQuery( 'body' );
			//shop mobile menu
			jQuery( '.mobile-toggle' ).click( function () {
				body.toggleClass( 'menu-open' );
				jQuery( 'header nav' ).toggleClass( 'hidden' );
				if ( body.hasClass( 'blog' ) ) {
					jQuery( '#logo' ).toggleClass( 'text-black' );
					jQuery( this ).toggleClass( 'text-white' );
				}
			} );

			//show dropdown menu on desktop
			jQuery( '[data-dropdown-container]' ).hover( function () {
					if ( jQuery( document ).width() > 768 ) {
						jQuery( this ).find( '[data-dropdown-target]' ).addClass( '--active' );
						jQuery( this ).find( '[data-dropdown-line]' ).removeClass( 'w-4' ).addClass( 'w-12' );
					}
				},
				function () {
					if ( jQuery( document ).width() > 768 ) {
						jQuery( this ).find( '[data-dropdown-target]' ).removeClass( '--active' );
						jQuery( this ).find( '[data-dropdown-line]' ).addClass( 'w-4' ).removeClass( 'w-12' );
					}
				} );

			//show dropdown menu on mobile
			jQuery( '[data-dropdown-container]' ).click( function () {
				if ( jQuery( document ).width() < 768 ) {
					var dropdownAlreadyShowing = false;
					if ( jQuery( this ).find( '[data-dropdown-target]' ).hasClass( '--active' ) === true ) {
						dropdownAlreadyShowing = true;
					}
					jQuery( '[data-dropdown-target]' ).removeClass( '--active' );
					if ( dropdownAlreadyShowing === false ) {
						jQuery( this ).find( '[data-dropdown-target]' ).toggleClass( '--active' );
					}
					jQuery( this ).find( '[data-dropdown-line]' ).toggleClass( 'w-4' ).toggleClass( 'w-12' );
				}
			} );
        </script>
