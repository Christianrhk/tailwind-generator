<script>
    window.addEventListener('scroll', function() {
        const navbar = document.querySelector('#navbar')
        const headernav = document.querySelector('#headernav');
        const divnav = document.querySelector('#divnav');
        if (window.pageYOffset > 850) {
            divnav.classList.remove('w-full')
            navbar.classList.remove('relative', 'z-20')
            headernav.classList.remove('relative', 'z-20')
            navbar.classList.add('fixed', 'inset-x-0', 'top-0', 'bg-app-nav', 'z-50')
        } else {
            // navbar.classList.remove('fixed ,inset-x-0 ,top-0 ,rounded-none')
            navbar.classList.remove('fixed', 'inset-x-0', 'top-0', 'bg-app-nav', 'z-50')
            navbar.classList.add('relative', 'z-20')
            headernav.classList.add('relative', 'z-20')
            divnav.classList.add('w-full')
        }
    });
</script>

