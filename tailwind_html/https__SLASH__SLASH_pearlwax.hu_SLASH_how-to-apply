	}
})
Vue.component('shipping-countdown', {
    data() {
    	return {
        	timer: 0,
        }
    },
    computed: {
        hours() {
        	return Math.floor(this.timer / 60 / 60)
        },
        minutes() {
            let seconds = this.timer - (this.hours * 60 * 60)
            return Math.floor(seconds / 60)
        },
        seconds() {
            let seconds = this.timer - (this.hours * 60 * 60) - (this.minutes * 60)
            return Math.floor(seconds)
        },
    },
   created() {
        var midnight = new Date();

        // make sure we dont say "shipping in -2 hours at 23:00"
        if (midnight.getHours() >= 17) {
        	midnight.setDate(midnight.getDate() + 1);
        }

        midnight.setHours( 17 );
        midnight.setMinutes( 0 );
        midnight.setSeconds( 0 );
        midnight.setMilliseconds( 0 );
        this.timer = ( midnight.getTime() - new Date().getTime() ) / 1000;

        setInterval(function(){
        	this.timer--
        }.bind(this), 1000);
    }
})
