    computed: {
        variant() {
        	return _.find(this.product.variants,(variant) => {
            	return variant.id == this.variantId
            });
        },
        price() {
        	let volumePrice = _.find(this.variant.volume_prices.slice().reverse(), (volumePrice) => {
            	return this.quantity >= volumePrice.quantity;
            });

			if (volumePrice) {
            	return volumePrice.price
            }

        	return this.variant.price;
        },
        compare_at_price() {
        	return this.variant.compare_at_price;
        },
        image() {
        	return this.variant.featured_image.src.replace('1024x1024',this.imageSize);
        },
    },
    methods: {
        toggleAccordion(accordion) {
            if (accordion == this.accordion) {
                this.accordion = null
                return
            }
            this.accordion = accordion
        },
        circleColor(color){
            return "bg-"+color.toLowerCase();
        },
        addToCart(variantId) {
        	var vm = this;
            axios.post('/cart/add.js', {
                id: variantId,
                quantity: 1,
            })
            .then(function (response) {
                vm.$root.refreshCart();
            })
            .catch(e => {
                console.log(e)
            })
        }
    }
})
Vue.component('expand-height', {
    data() {
    	return {
            descriptionHeightDefault: null,
            descriptionHeightMinimized: '150px',
            descriptionHeight: null,
            descriptionStatus: "minimized",
        }
    },
    mounted() {
        this.matchHeight();
        this.descriptionHeight = this.descriptionHeightMinimized;
    },
    methods: {
        toggleSeeDescription(){
            if(this.descriptionStatus == 'minimized') {
                this.descriptionStatus = "expanded";
                this.descriptionHeight = this.descriptionHeightDefault;
                return
            }
            this.descriptionStatus = "minimized"
            this.descriptionHeight = this.descriptionHeightMinimized;
            const el = this.$refs.infoBox;
            if (el) {
              el.scrollIntoView({ block: 'start',  behavior: 'smooth' });
            }
        },
        matchHeight() {
            this.descriptionHeightDefault = this.$refs.infoBox.clientHeight + 'px';
        }
    }
})
Vue.component('checkout-phone', {
    props: {
        initialPhone: {
            default: '',
        },
    },
	data() {
    	return {
        	phone: this.initialPhone
        }
    },
    computed: {
        displaySwedenWarning() {
			if (this.phone.length <= 3) {
            	return false;
            }
            
            if (this.phone.startsWith('+46') && ! this.phone.startsWith('+467')) {
            	return true;
            }
            
            return false;
        }
    }
})

