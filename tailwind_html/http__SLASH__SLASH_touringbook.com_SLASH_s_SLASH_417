<script>
new Vue({
	el: '#app',
	data: {
		'spot_id':417,
		'quests':[]
	},
	methods: {

        getApi() {
        	console.log('getApi')
            // let formData = new FormData(document.forms.postForm);
			// console.log(formData.entries);
			let formData = {
				'spot_id': 417
			}

			axios.get('/api/quests/v1/spot_included/'+417, formData)
			.then((response) => {
				console.log(response.data);
				this.quests = response.data
			})
			.catch(function (error) {
				console.log(error);
			});
		},
		onSubmit() {
            //let formData = new FormData;
            let formData = new FormData(document.forms.postForm);
            
            console.log(formData.entries);
            for (item of formData) {
            	console.log(item);
            }

            axios.post('/api/quests/v1/save', formData)
            .then((response) => {
                    // Ajax通信が成功した時
                    if( response.data.id ){
                    	location.href='/q/'
                    } else {
                    	alert('投稿できませんでした。');
                    }
                    
                })
            .catch(function (error) {
            	alert('エラー 投稿できませんでした。');
            	console.log(error);
            });
        },
		test(quest_id,included){
			data = {
				'spot_id': this.spot_id,
				'quest_id': quest_id,
				'included': included,
			}
			console.log(data)
			axios.put('/api/quests/v1/spot_add', data)
	            .then((response) => {
                    console.log(response)
                })
	            .catch(function (error) {
	            	alert('エラー 保存できませんでした。');
	            	console.log(error);
	            }
	        );
		},
	},
	mounted() {
		this.getApi()
	},
})
</script>

