        Livewire.emitTo('user.favorite-product.create', 'cancel')
        Livewire.emitTo('user.recruitment.create', 'resetError')
        Livewire.emitTo('user.recruitment-page.create', 'resetError')
        $('#form-create-favorite-product .form-select').val(null).trigger('change');
        $('#form-create-deal .form-select').val(null).trigger('change');
        $('#form-create-deal .select-tags').val([]).trigger('change');
        $('#form-create-deal input').val(null);
        $('#form-create-deal input.salary_min').val(0);
        $('#form-create-deal input.salary_max').val(0);
        $('#form-create-favorite-product input').val(null);
        $('#form-create-favorite-product textarea').val(null);
        if(!isNaN(editorDealDescription)) {
            editorDealDescription.setData('');
        }
        if(!isNaN(recruitmentDescription)) {
            recruitmentDescription.setData('');
        }
        if(!isNaN(editorFavoriteProductDescription)) {
            editorFavoriteProductDescription.setData('');
        }
        $('#form-create-job .form-select').val(null).trigger('change');

        $('#form-create-job .image-input-wrapper').css('background-image','');
