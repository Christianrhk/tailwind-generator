            '        <path d="M11,16 C13.7614237,16 16,13.7614237 16,11 C16,8.23857625 13.7614237,6 11,6 C8.23857625,6 6,8.23857625 6,11 C6,13.7614237 8.23857625,16 11,16 Z M11,18 C7.13400675,18 4,14.8659932 4,11 C4,7.13400675 7.13400675,4 11,4 C14.8659932,4 18,7.13400675 18,11 C18,14.8659932 14.8659932,18 11,18 Z" fill="#000000" fill-rule="nonzero"/>\n' +
            '        <rect fill="#000000" opacity="0.3" x="9" y="10.5" width="4" height="1" rx="0.5"/>\n' +
            '</svg></span>\n' +
            '<!--end::Svg Icon-->' +
            '<span class="ck ck-tooltip ck-tooltip_s"><span class="ck ck-tooltip__text">Zoom out</span></span><span class="ck ck-button__label">Zoom out</span></button>');
    });
    $("#author-editor").on("hidden.bs.modal", function (e) {
        $('#form-update-job .form-select.location').select('destroy');
        $('#form-update-job .form-select.district').select('destroy');
        checkEditorChange = 0;
        Livewire.emitTo('user.articles.create', 'cancel')
        Livewire.emitTo('user.articles.create-article', 'cancel')
        Livewire.emitTo('user.deal.create', 'cancel')
        Livewire.emitTo('user.favorite-product.create', 'cancel')
        Livewire.emitTo('user.recruitment.create', 'resetError')
        Livewire.emitTo('user.recruitment-page.create', 'resetError')
        $('#form-create-favorite-product .form-select').val(null).trigger('change');
        $('#form-create-deal .form-select').val(null).trigger('change');
        $('#form-create-deal .select-tags').val([]).trigger('change');
        $('#form-create-deal input').val(null);
        $('#form-create-deal input.salary_min').val(0);
        $('#form-create-deal input.salary_max').val(0);
        $('#form-create-favorite-product input').val(null);
        $('#form-create-favorite-product textarea').val(null);
        if(!isNaN(editorDealDescription)) {
            editorDealDescription.setData('');
        }
        if(!isNaN(recruitmentDescription)) {
            recruitmentDescription.setData('');
        }
        if(!isNaN(editorFavoriteProductDescription)) {
            editorFavoriteProductDescription.setData('');
        }
        $('#form-create-job .form-select').val(null).trigger('change');

        $('#form-create-job .image-input-wrapper').css('background-image','');
        // $('.new-post-dashboard .new-post-video').addClass('d-none');
        $('.new-post-dashboard .new-post-content').html('');
        // $('.new-post-dashboard #video').html('');
        $('.new-post-dashboard .new-post-image').addClass('d-none');
        if (editorArticle != undefined || editorArticle != null) {
            editorArticle.setData('');
        }
        if (recruitmentPageDescription != undefined || recruitmentPageDescription != null) {
            recruitmentPageDescription.setData('');
        }
        if (recruitmentDescription !== undefined || recruitmentDescription !== null) {
            recruitmentDescription.setData('');
        }
        
        
        
        
        
        

        
        
        
        
        
        
        
        

        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        $('#author-editor #nav-article .ck.ck-editor__editable_inline>:last-child').html('')
        $('#author-editor #nav-article .form-select').val(null).trigger('change');
        $('#author-editor #form-create-post-article .image-input-wrapper').css('background-image','');
        $('#author-editor #nav-article #form-create-post-article #article-text-title').val('');
        $('#author-editor').remove('full-screen');
        $('#author-editor .ck.ck-toolbar__items .editor-zoom-in').remove();
        $('#author-editor .ck.ck-toolbar__items .editor-zoom-out').remove();
        $('#author-editor .ck.ck-toolbar__items').append('<button class="ck ck-button ck-off editor-zoom-out" type="button" tabindex="-1">' +
            '<!--begin::Svg Icon | path: assets/media/icons/duotone/Design/ZoomMinus.svg-->\n' +
            '<span class="svg-icon svg-icon-dark svg-icon-1"><svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">\n' +
            '        <path d="M14.2928932,16.7071068 C13.9023689,16.3165825 13.9023689,15.6834175 14.2928932,15.2928932 C14.6834175,14.9023689 15.3165825,14.9023689 15.7071068,15.2928932 L19.7071068,19.2928932 C20.0976311,19.6834175 20.0976311,20.3165825 19.7071068,20.7071068 C19.3165825,21.0976311 18.6834175,21.0976311 18.2928932,20.7071068 L14.2928932,16.7071068 Z" fill="#000000" fill-rule="nonzero" opacity="0.3"/>\n' +
