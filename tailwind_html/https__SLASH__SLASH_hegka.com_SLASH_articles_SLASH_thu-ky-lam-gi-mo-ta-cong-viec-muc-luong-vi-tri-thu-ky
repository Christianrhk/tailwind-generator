    function resetCommentReply(action, comment) {
        $('#imageReplyUpload-' + action + '-' + comment).val('')
        $('.reply-container[data-action="' + action + '"]').addClass('display-none').html('');
        $('.reply-action[data-action="' + action + '"]').html('<span class="comment-like text-gray-700" data-action="' + action + '" data-comment="' + comment + '"><i class="fas fa-arrow-up text-700 "></i><span class="text-gray-700 text-700 ">  0  </span><i class="fas fa-arrow-down text-700"></i></span> <span class="reply-comment text-gray-700 text-700 ml-2" data-action="' + action + '" data-comment="' + comment + '">Trả lời</span>');

    }

    $(window).scroll(function() {
        var height = $(window).scrollTop();
        var heightScreen = $(window).height();
        var topBanner = heightScreen - height
        if(topBanner <= 135 ){
            topBanner = 135
        }
        var heightScroll = $(window).scrollTop();
        if(heightScroll >= 350 ){
            heightScroll = 350
        }
        heightScroll = heightScroll *3;
        $('.banner-right').css('top', topBanner);
        $('.banner-left').css('top', topBanner);
        $('.banner-scroll').css('background-position-y',-heightScroll);
        if(height > 50) {
            $('#my-progress').addClass('progress-fixed');
            $('#my-progress-footer').addClass('progress-fixed-footer');
        } else {
            $('#my-progress').removeClass('progress-fixed');
            $('#my-progress-footer').removeClass('progress-fixed-footer');
        }

        var footerHeight = $('.detail-content').innerHeight();

        var elem = document.getElementById("my-bar");
        var elemFooter = document.getElementById("my-bar-footer");

        var width = (height / footerHeight) * 100;
        elem.style.width = width + "%";
        elemFooter.style.width = width + "%";
    });
</script>
<script>
    $(document).ready(function () {
        $(document).on('click','.container-banner #rightbar,.container-banner #leftbar,.container-banner .event-notification-box,.container-banner #leftbar,.container-banner .toolbar,.container-banner .modal', function (e) {
            e.stopPropagation();
        })
        window.onscroll = function (ev) {
            if($(window).width() <= 992) {
                var top = $('.ads-show').offset().top - $(window).height() + 50;
                var bottom = $('.ads-show').offset().top + $(window).height();
                let heightScroll = window.scrollY;
                if (heightScroll >= top && heightScroll <= bottom) {
                    $('.ads-container').addClass('position-fixed').removeClass('d-none')
                } else {
                    $('.ads-container').removeClass('position-fixed').addClass('d-none')
                }
            }

            if(heightScroll >= 230) {
                $('.container-banner').addClass('banner-scroll').addClass('background-size-cover')
            } else {
                $('.container-banner').removeClass('banner-scroll').removeClass('background-size-cover')
            }
            if ((window.innerHeight + window.scrollY) >= ($('.main-body').height() - 300)) {
                Livewire.emitTo('user.articles.detail', 'loadMore')
                
                
                
            }
        };
    })
</script>
