              <div class="content_container mx-auto w-10/12 md:w-8/12 max-w-4xl">
          <h2 class="font-bold text-lg sm:text-xl md:text-2xl lg:text-3xl pb-2">Threats and Opportunities</h2>
        </div>
            <!-- Content Block -->
            <!-- Quote Block -->
            <!-- Highligted Block -->
            <!-- Call to Action -->
            <!-- Media / Image / Single -->
            <!-- Media / Image / Slider -->
                  <!-- Media / Video / Single -->
      
