      <script id=&quot;rendered-js&quot; >
// load Flip
gsap.registerPlugin(Flip);

let lastState;

/*********
 * components
 *********/
// home page component
const HomeComponent = {
  beforeUnmount: function () {
    console.log('transition away from home');

    const elemToFlip = document.querySelector('[data-flip-id]');
    if (elemToFlip) {
      lastState = Flip.getState(elemToFlip);
    }
  },
  mounted: function () {
    console.log('home page mounted');

    const elemToFlip = document.querySelector('[data-flip-id]');
    if (elemToFlip &amp;&amp; lastState) {
      Flip.from(lastState, {
        targets: elemToFlip
        // other Flip properties
      });
    }

    lastState = null;
  },
  template: `
  <div class=&quot;absolute bottom-0 right-0 m-4&quot;>
    <router-link
      data-flip-id=&quot;img&quot;
      to=&quot;/project&quot;
      class=&quot;block w-12 h-12 bg-blue-600 full&quot;
    ></router-link>
  </div>
  ` };

// project page component
const ProjectComponent = {
  beforeUnmount: function () {
    console.log('transition away from project');

    const elemToFlip = document.querySelector('[data-flip-id]');
    if (elemToFlip) {
      lastState = Flip.getState(elemToFlip);
    }
  },
  mounted: function () {
    console.log('project page mounted');

    const elemToFlip = document.querySelector('[data-flip-id]');
    if (elemToFlip &amp;&amp; lastState) {
      Flip.from(lastState, {
        targets: elemToFlip
        // other Flip properties
      });
    }

    lastState = null;
  },
  template: `
  <div class=&quot;bg-blue-600 h-screen&quot; data-flip-id=&quot;img&quot;>
    <div class=&quot;p-3 text-white flex items-center justify-between border-b border--white&quot;>
      <router-link 
        to=&quot;/&quot; 
        class=&quot;text-white&quot;
      >Back</router-link>
      
      <h1 class=&quot;font-bold&quot;>Header</h1>
    </div>
  </div>
  ` };


/*********
 * routing
 *********/
const routes = [
{ path: &quot;/&quot;, component: HomeComponent },
{ path: &quot;/project&quot;, component: ProjectComponent }];

const router = VueRouter.createRouter({
  history: VueRouter.createWebHashHistory(),
  routes });

/*********
 * main application
 *********/
const app = Vue.createApp({}).
use(router).
mount('#app');
//# sourceURL=pen.js
    </script>

  

