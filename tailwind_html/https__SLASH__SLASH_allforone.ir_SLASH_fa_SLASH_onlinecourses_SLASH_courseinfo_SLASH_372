<script>
    $(document).ready(function () {
        let countElements = 0
        let allPrices=0
       
        function counter(count){
            $(".thecounter").html(count)
        }
        getBascket();
        
        $(".PriceTag").on("click",function(event){
            event.stopPropagation();
            let father = $(this).closest('.session-detail')
            let entity =  father.find('.Buychapter').attr("entity");
            let entity_id =  father.find('.Buychapter').attr("entity_id");
            entity_id = entity_id.replace('chapter_',' ');
            let TITLE = $(this).parent().attr("title")
            let PRICE = $(this).parent().attr("price")
            let ID = $(this).parent().attr("id")

            if($(this).hasClass("added"))
            {
            $(this).removeClass("added")
            father.find('i').removeClass("added-i")
            let url = "https://allforone.ir/fa/baskets/removeentity";
            
            $.post(url, {entity: "chapter", entity_id:entity_id}, function () {});
            countElements--
            counter(countElements)
            $("#basket-"+ entity_id).remove();
            allPrices = allPrices -  Number(PRICE)
            $(".all-price").html(allPrices)
            getBascket();
            }else{
                countElements++
                counter(countElements)
                $(".basket-products-wrapper").append(basketElement);
                $(".basket-element:last-child .basket-title").html(TITLE)
                $(".basket-element:last-child .basket-price").html(PRICE)
                $(".basket-element:last-child #basket-" + entity_id).html(ID)
                allPrices = allPrices +  Number(PRICE)
                $(".all-price").html(allPrices)
                $(this).addClass("added")
                father.find('i').addClass("added-i")
                let url = "https://allforone.ir/fa/baskets/addtobasket";
                
                $.post(url, {entity: "chapter", entity_id: entity_id}, function () {});
                getBascket();
                // $(target).hide()
                // $("#check" + entity_id).show();
            }
        })
        
        function getBascket(){
        $.ajax({
            url: "https://allforone.ir/fa/onlinecourses/getbasketstatus",
            type: "POST",
            success: function(response) {
                $(".basket-products-wrapper").empty()
                if(!response.data){
                    $(".cd-cart__trigger.text-replace").addClass("hide")
                    $(".cd-cart__layout").addClass("hide")

                }else{
                    $(".cd-cart__trigger.text-replace").removeClass("hide")
                    $(".cd-cart__layout").removeClass("hide")

                    countElements=0
                    let new_entities = response.data.entities;
                    allPrices = 0
                    $(".all-price").html(allPrices)
                    let new_entities_arr=new_entities.split(",");
                    console.log("this entities", new_entities_arr)

                    let basketEL
                    let TitleEl
                    let Title
                    let PriceEl
                    let Price
                    let virtual_Index=0
                    new_entities_arr.forEach(function(element, index){ 
                        
                        
                    let thisEl=$("#"+ element).closest('.session-detail')
                    console.log("teeeeeeeeeest",thisEl.length)
                    basketEL = document.getElementsByClassName('basket-element')
                    TitleEl = document.getElementsByClassName('basket-title')
                    PriceEl = document.getElementsByClassName('basket-price')
                    
                    if(thisEl.length == 1){
                        if(element){
                            
                            countElements++
                            counter(countElements)
                            

                            $("#"+ element).closest('.session-detail').find('i').addClass("added-i")
                            $("#"+ element).closest('.session-detail').find('.PriceTag').addClass("added")
                            
                            Title = $("#"+ element).attr("title")
                            Price = $("#"+ element).attr("price")
                            
                            $(".basket-products-wrapper").append(basketElement);
                            console.log("virtual_Index",virtual_Index)
                            
                            console.log("basketEL",basketEL[virtual_Index])    
                            basketEL[virtual_Index].setAttribute("id", `basket-${element}`) 
                            TitleEl[virtual_Index].innerHTML=Title
                            PriceEl[virtual_Index].innerHTML=Price
                            allPrices = allPrices +  Number(Price)
                            virtual_Index++
                            console.log("virtual_Index",virtual_Index)
                        }
                    }
                }); 
                $(".all-price").html(allPrices)
                removeBasketItem();
                }
                
            }
        });
    }

    // REMOVE BASKET

    
    $('.falseVideo').bind('contextmenu', function () {
    return false;
    });
    // let url = "https://allforone.ir/fa/baskets/destroybasket";
    // $.post(url, {}, function(){});
    $(".cd-cart__checkout").click(
            function(){
            let url = "https://allforone.ir/fa/baskets/getbasket";
            $.post(url, {}, function(data){

            let url = "https://allforone.ir/fa/payments/createinvoice/basket/" + data.id;
            window.location = url;
            });
            }
    );

    function removeBasketItem(){
        $(".remove-basket-item").on("click",function(){
        let ID = $(this).closest('.basket-element').attr("id")
        ID = ID.replace('basket-chapter_','');
        $(this).closest('.basket-element').remove()
        
        let url =" https://allforone.ir/fa/baskets/removeentity";
        $.post(url, {entity: "chapter", entity_id:ID}, function () {
            getBascket()
        });

        
    })
    }
    });
    //One page basket

$(".chapterx").click(function(){
 $(this).find($(".fa")).toggleClass('fa-minus fa-plus');
$(this).next().slideToggle(); cursor: pointer;
   
});
</script>
<script>


$('#report_btn').click(function(){
        var report = $(this).attr('report');
        if(report==0)
        {
            $('#faultModal').modal('show');
            $('#reportlist').modal('hide');
        }
        else
        {
            $('#faultModal').modal('hide');
            $('#reportlist').modal('show');
            $('#status_title').hide();
            var val = "372";
        }
});

</script>
