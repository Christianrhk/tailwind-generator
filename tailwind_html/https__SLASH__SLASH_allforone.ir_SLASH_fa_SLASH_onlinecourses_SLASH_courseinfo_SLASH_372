<script>
    let basketElement ='<li class="w-100 basket-element"><div class="clearfix mb-1"><div class="float-left rtl"><span class="basket-price"></span><span class="mr-1">تومان</span></div><div class="basket-title float-right"></div></div><div class="clearfix"><div class="float-left  remove-basket-item"><i class="fa fa-trash" aria-hidden="true"></i></div></div></li>'                                                                                         
    var vid = document.getElementById("myVideo");
    
    function pauseVid() {
    vid.pause();
    }
    function ShowAndHide() {
    var x = document.getElementById('SectionName');
    if (x.style.display == 'none') {
    x.style.display = 'block';
    } else {
    x.style.display = 'none';
    }
    }

    function Preview(file){
