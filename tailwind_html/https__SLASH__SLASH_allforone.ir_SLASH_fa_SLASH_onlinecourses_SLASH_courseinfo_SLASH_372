<script type="text/javascript">
    $('document').ready(function () {
        $('select[name=violation_type]').on('change', function () {
            violation_type = this.value;
        });
        $('#violate').change(function () {
            if (violation_type == '13' || violation_type == '14')
            {
                $('.obligation').show();
            } else {
                $('.obligation').hide();
            }
        });


        $('#submit').click(function () {
              var ent_id = "courseinfo";
            
             // alert(ent_id);
            var en = $('input[name=entity]').val();
            var en_id = $('input[name=entity_id]').val();
            if(ent_id=='courseinfo')
            {
                en = "course";
                en_id = "372";
               // alert(en_id);
            }
            if(ent_id=='examinfo')
            {
                en = "exam";
                en_id = "372";
            }
            if(en == "onlineexamcats"){
                en = "exam";
            }else if(en == "onlinecourses"){
                en = "session";
                
            }
            
            var description = $('textarea').val();
            var violation_type = $('select[name=violation_type]').val();
            var member_id = "0";
            if ((violation_type == '100'))
            {
                alert('لطفا یکی از موارد لیست را انتخاب نمایید');
                return false();
            }

            if ((violation_type == '13' || violation_type == '14') && (description == '' || description.length < 0))
            {

                alert('لطفا قسمت توضیحات را پر نمایید.');
                return false();
            } else
            {
                var url =  'https://allforone.ir/fa/violationreport/send';
                $.ajax({
                    url: url,
                    type: 'post',
                    data: {'entity': en, 'entity_id': en_id, 'violation_type': violation_type, 'description': description, 'member_id': member_id},
                    success: function (response) {
                        $('#faultModal').modal('hide');
                        alert("گزارش شما ثبت شد");
                        //end of success loop
                    }
                });
            }
        });
    });
    function getBaseUrl() {
        var re = new RegExp(/^.*\//);
        return re.exec(window.location.href);
    }
</script>
 
                        </div>

                        <!-- Modal footer -->


                    </div>
                </div>
            </div>
