<script>
    $(function () {

        $('.custom-dropdown').on('show.bs.dropdown', function () {
            var that = $(this);
            setTimeout(function () {
                that.find('.dropdown-menu').addClass('active');
            }, 100);


        });
        $('.custom-dropdown').on('hide.bs.dropdown', function () {
            $(this).find('.dropdown-menu').removeClass('active');
        });

    });

    $(".MyPic_Pro").click(
            function ()
            {
                $(".TopMenu_pro").toggleClass("show");
            });
    $(".Mosearch .btn").click(
            function ()
            {
                let has_active = $(".Mosearch").hasClass("active");
                if (has_active == false)
                {
                    $(".HeaderButton").removeClass("d-block");
                    $(".mobileLogO img").removeClass("d-block");
                    $(".HeaderButton").addClass("d-none");
                    $(".mobileLogO img").addClass("d-none");
                } else
                {
                    $(".HeaderButton").removeClass("d-none");
                    $(".mobileLogO img").removeClass("d-none");
                    $(".HeaderButton").addClass("d-block");
                    $(".mobileLogO img").addClass("d-block");
                }

            });
    $(".hamburger.is-closed").click(
            function ()
            {
                $(".Mosearch.active").removeClass("active");
                $(".HeaderButton").removeClass("d-none");
                $(".HeaderButton").addClass("d-block");
                $(".mobileLogO img").removeClass("d-none");
                $(".mobileLogO img").addClass("d-block");
            });
//is-closed
</script>        <div class="navbarMenu prl_100 d-flex justify-content-between flex-row-reverse align-items-center">
