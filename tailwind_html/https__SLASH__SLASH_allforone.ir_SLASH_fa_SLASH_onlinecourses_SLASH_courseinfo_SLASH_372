    $('document').ready(function () {
       var status =  "false";
       //alert(status.length);
       if(status.length!=0)
       {
        $('#status').text(status);
       }
       else
       {
           //alert(status);
           $('#answer_status').remove();
       }
         
    });
    function getBaseUrl() {
        var re = new RegExp(/^.*\//);
        return re.exec(window.location.href);
    }
