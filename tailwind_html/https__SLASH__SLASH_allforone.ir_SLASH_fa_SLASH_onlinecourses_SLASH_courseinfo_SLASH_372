<script type="text/javascript" >
    $(document).ready(function () {
    $(".al_search_in").attr('id', "search_input_box"); $(".al_search_in").attr('list', "search_data"); $("<datalist id='search_data'></datalist>").insertAfter("#search_input_box");
    $("#search_input_box").keyup(function(event){

    if (event.keyCode === 13) {
    $("#basic-text1").click();
    return false;
    }
    let val = $("#search_input_box").val();
    if (val == '' || (event.keyCode >= 37 && event.keyCode <= 40))
    {
    return false;
    }
    $.post("https://allforone.ir/fa/search/datalist", {value:val}, function(data){$("#search_data").html(data)});
    });
    $("#basic-text1").click(
            function()
            {
            let val = $("#search_input_box").val();
            if (val == '' || (event.keyCode >= 37 && event.keyCode <= 40))
            {
            return false;
            }
            window.location = "https://allforone.ir/fa/search/searchresults/" + val;
            }

    );
    $("#search_input_box").attr("autocomplete", "off");
    
    $(".al_search_mo").attr('id', "search_input_box_mo");
    $(".al_search_mo").attr('list', "search_data_mo"); 
    $("<datalist id='search_data_mo'></datalist>").insertAfter("#search_input_box_mo");
    $("#search_input_box_mo").keyup(function(event){

    if (event.keyCode === 13) {
    $("#basic-text1_mo").click();
    return false;
    }
    let val = $("#search_input_box_mo").val();
   if (val == '' || (event.keyCode >= 37 && event.keyCode <= 40))
    {
    return false;
    }
    $.post("https://allforone.ir/fa/search/datalist", {value:val}, function(data){$("#search_data_mo").html(data)});
    });
    $("#basic-text1_mo").click(
            function()
            {
            let val = $("#search_input_box_mo").val();
            if (val == '' || (event.keyCode >= 37 && event.keyCode <= 40))
            {
            return false;
            }
            window.location = "https://allforone.ir/fa/search/searchresults/" + val;
            }

    );
    $("#search_input_box_mo").attr("autocomplete", "off");
    
    
    $('.close-popup').click(function () {
    $('video').each(function () {
    $(this).get(0).pause();
    })
    });
    $('#videomodal').click({backdrop: 'static', keyboard: false});
    $('.RRight')
            .theiaStickySidebar({
            additionalMarginTop: - 60
            });
    $('.allRight')
            .theiaStickySidebar({
            additionalMarginTop: 10
            });
    $('#datatablePage').DataTable({
    "ordering": false,
            "info": false,
            "filter": false,
            "length": false,
    });
    });</script>
<script type="text/javascript">

    $(function () {
    $('#main_navbar').bootnavbar();
    })
</script>
