             Vue.component('pl-ecom', {
                  props: ['variants','title','inwishlist','swatches','thumbnail','gallery'],
                  data:function(){
                    return {  
                        selectedVariant : null,
                        colours:[],
                        sizes:[],
                        selectedSize:null,
                        selectedColour:null,
                        show:false,
                        alerttitle:'',
                        msg:'',
                        alreadyonWL:false,
                        wlDisabled: false
            
                    }
                  },
                  computed:{
                    selectedVariantColour:function(){

                      if(this.colours)
                      return _.find(this.colours,{value:this.selectedVariant.colour});

                    },
                    selectedVariantSize:function(){
                      if(this.sizes)
                      return _.find(this.sizes,{value:this.selectedVariant.size});
                    },
                    images:function(){

                      return _.concat([this.thumbnail],this.gallery);
                    }
                  },
                  watch: {

                      selectedColour:function(){
                        this.findVariant();
                      },
                      selectedSize:function(){
                        this.findVariant();
                      }
                  
                        
                  },
                  methods: {

                      requireLogin:function(){
                        this.alerttitle = "Notice";
                        this.msg = "Please login in to create wishlist.";
                        this.show = true;

                      },

                      addWishlist :function(id){


                        this.wlDisabled = true;
                        var that = this;

                        $.get('/actions/prologue/default/save-wishlist',{id:id},function(res){
                          if(res.success){
                            that.alreadyonWL = parseInt(res.status);
                            that.wlDisabled = false;
                          }

                        },'json');

                        
                        

                      },
                      hideAlert:function(){

                        this.show =false;
                      },

                      findVariant:function(){

                        if(this.selectedSize&&this.selectedColour)
                        {
                          var v = _.find(this.variants.variants,{size:this.selectedSize,colour:this.selectedColour});
                        }
                        else if(this.selectedSize)
                        {
                        var v = _.find(this.variants.variants,{size:this.selectedSize});

                        }
                        else if(this.selectedColour)
                        {
                        var v = _.find(this.variants.variants,{colour:this.selectedColour});

                        }
                        else
                        var v = this.variants[0];

                        this.selectedVariant = _.cloneDeep(v);

                      },
                      selectFirstOption: function(){

                        var that = this;

                          if(that.sizes&&that.sizes.length>0)
                          that.selectedSize = this.sizes[0].value;

                        
                          if(that.colours&&that.colours.length>0)
                          that.selectedColour = this.colours[0].value;


                      },
                      nextStep:function(step){

                        this.stage =step ;


                      },
                      toggleMTM:function() {
                        var current = this.selectedVariant;

                        var find = _.find(this.variants,function(o){

                          return o.madeToMeasure != current.madeToMeasure&&o.fabricId==current.fabricId;
                        });


                        this.selectedVariant = find;
                      },

                      getUnified:function(variants){
                        return _.filter(variants,function(o){ return o.madeToMeasure==false})
                      },
                    
                      selectFabric:function(variant)
                      {
                        this.selectedVariant = variant;
                        this.stage = 2;
                      },

                      addCart:function()
                      {

                        $('#cartForm').submit();

                      }
                   
                  },
                  filters:{

                    price:function(value){
                      return 'HK$ '+parseFloat(value).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                    }
                    
                  },
                  mounted: function(){

                    this.selectedVariant = _.cloneDeep(this.variants.variants[0]);
                    this.sizes = this.variants.sizes;
                    this.colours = this.variants.colours;
                    this.selectFirstOption();
                    this.alreadyonWL = this.inwishlist;

                  }
             });
            
             new Vue({
                 el: '#vue-app', 
                 delimiters: ["<%","%>"]
            }); 
            
            
            </script>

