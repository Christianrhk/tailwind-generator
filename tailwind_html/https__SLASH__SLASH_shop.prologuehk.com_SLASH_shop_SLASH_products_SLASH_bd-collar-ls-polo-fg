            function objectToQuerystring (obj) {
            
              for (var propName in obj) { 
                if (obj[propName] === null || obj[propName] === undefined) {
                  delete obj[propName];
                }
              }
            
              return new URLSearchParams(obj).toString();
            }

             Vue.component('pl-gallery', {
                  props: [ 'images'],
                  data:function(){
                    return {  
