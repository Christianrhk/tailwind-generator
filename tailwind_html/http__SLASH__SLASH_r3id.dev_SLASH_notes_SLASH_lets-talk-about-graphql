        <path d="M50.3034451,42.75 C48.8986482,45.1807967 45.7671218,46.0104699 43.3233605,44.6131256 C40.8795993,43.2157814 40.0455011,40.1008682 41.450298,37.6700715 C42.8550949,35.2392748 45.9866213,34.4096016 48.4303826,35.8069459 C50.8887771,37.2188458 51.7228753,40.3192033 50.3034451,42.75 M9.53506867,19.3299285 C8.13027178,21.7607252 4.99874538,22.5903984 2.55498413,21.1930541 C0.11122287,19.7957099 -0.722875284,16.6807967 0.681921606,14.25 C2.0867185,11.8192033 5.2182449,10.9895301 7.66200615,12.3868744 C10.1057674,13.7987743 10.9398656,16.8991318 9.53506867,19.3299285 M0.696554907,42.75 C-0.708241983,40.3192033 0.125856171,37.2188458 2.56961743,35.8069459 C5.01337868,34.4096016 8.13027178,35.2392748 9.54970198,37.6700715 C10.9544989,40.1008682 10.1204007,43.2012257 7.67663946,44.6131256 C5.2182449,46.0104699 2.1013518,45.1807967 0.696554907,42.75 M41.4649313,19.3299285 C40.0601344,16.8991318 40.8942326,13.7987743 43.3379938,12.3868744 C45.7817551,10.9895301 48.8986482,11.8192033 50.3180784,14.25 C51.7228753,16.6807967 50.8887771,19.7811542 48.4450159,21.1930541 C46.0012546,22.5903984 42.8697282,21.7607252 41.4649313,19.3299285 M25.5,57 C22.6757729,57 20.392978,54.7293156 20.392978,51.9200715 C20.392978,49.1108274 22.6757729,46.840143 25.5,46.840143 C28.3242271,46.840143 30.607022,49.1108274 30.607022,51.9200715 C30.607022,54.71476 28.3242271,57 25.5,57 M25.5,10.159857 C22.6757729,10.159857 20.392978,7.88917263 20.392978,5.0799285 C20.392978,2.27068437 22.6757729,0 25.5,0 C28.3242271,0 30.607022,2.27068437 30.607022,5.0799285 C30.607022,7.88917263 28.3242271,10.159857 25.5,10.159857" id="Shape"></path>
