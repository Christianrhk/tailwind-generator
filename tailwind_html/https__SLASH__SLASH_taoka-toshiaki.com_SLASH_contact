    <script>
        $(document).ready(function() {
            $('#myID').wavify({
                height: 10,
                bones: 3,
                amplitude: 40,
                color: 'rgba(3, 169, 244, .8)',
                speed: .25
            });
        });
        document.getElementById("btn").addEventListener("click", (e) => {
            const Subject = document.getElementsByName("subject")[0].value;
            const text = document.getElementsByName("text")[0].value;
            const csrf_token = document.getElementsByName("csrf_token")[0].value;
            (async () => {
                const ajax_flg = await (() => {
                    return new Promise((resolve, reject) => {
                        $.ajax({
                            headers: {
                                'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr(
                                    'content')
                            },
                            type: "post",
                            url: "/contact/submit",
                            data: {
                                mode: "check",
                                Subject: Subject,
                                text: text,
                                csrf_token: csrf_token
                            },
                            async: true,
                            dataType: "json",
                        }).then(
                            function(response) {
                                if (response.res === "ok") {
                                    resolve(true);
                                } else {
                                    resolve(false);
                                }
                            },
                            function() {
                                reject(false);
                            }
                        )
                    });
                })();
                let sendflg = ajax_flg !== true ? "入力が不正です" : await (() => {
                    return new Promise((resolve, reject) => {
                        const g_recaptcha_response = document.getElementById(
                            "g-recaptcha-response").value;
                        $.ajax({
                            headers: {
                                'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr(
                                    'content')
                            },
                            type: "post",
                            url: "/contact/submit",
                            data: {
                                mode: "send",
                                Subject: Subject,
                                text: text,
                                csrf_token: csrf_token,
                                'g-recaptcha-response': g_recaptcha_response
                            },
                            async: true,
                            dataType: "json",
                        }).then(
                            function(response) {
                                if (response.res === "ok") {
                                    resolve(response.mes);
                                } else {
                                    resolve(response.mes);
                                }
                            },
                            function() {
                                reject(false);
                            }
                        )
                    });
                })();

                if (!sendflg) {
                    alert("送信が失敗しました");
                } else {
                    alert(sendflg);
                }
            })();
        });
    </script>
