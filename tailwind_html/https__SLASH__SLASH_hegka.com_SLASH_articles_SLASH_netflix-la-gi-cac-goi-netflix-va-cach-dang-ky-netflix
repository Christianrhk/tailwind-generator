    })

    $(document).on('mouseover', '.comment-post-reply', function () {
        action = $(this).data("action");
        $('.icon-comment-edit-reply[data-action="' + action + '"]').removeClass("display-none")
    })
    $(document).on('mouseout', '.comment-post-reply', function () {
        action = $(this).data("action");
        $('.icon-comment-edit-reply[data-action="' + action + '"]').addClass("display-none")
    })

    $(document).on('click', '.reply-cancel', function () {
        action = $(this).data("action");
        comment = $(this).data("comment");
        resetReply(action, comment)
    })
    $(document).on('click', '.btn-reply-image-remove', function () {
        action = $(this).data("action");
        comment = $(this).data("comment");
        $('#imagePreviewReply-' + action).removeAttr('style')
        $('#imagePreviewReply-' + action).attr('data-delete', "1")
        $('#imageUploadReply-' + action+ '-' +comment).val('')
        $('.image-preview-commit-reply[data-action="' + action + '"]').addClass('display-none')
        imageReplyDelete.push(action)
    })
    $(document).on('click', '.icon-comment-edit-reply', function () {
        action = $(this).data("action");
        comment = $(this).data("comment");
        $('.post-comment-text-reply[data-action="' + action + '"]').attr("contenteditable", "true").attr("spellcheck", "false").css('width', '100%');
        $(this).remove();
        $('.comment-post-reply[data-action="' + action + '"]').css('width', '100%');
        $('.fonts-edit-reply[data-action="' + action + '"]').removeClass("display-none")
        $('.btn-reply-image-remove[data-action="' + action + '"]').removeClass("display-none")
        $('.image-upload-reply-main[data-action="' + action + '"]').append('<div class="d-flex flex-row align-items-center reply-cancel" data-action="' + action + '" data-comment="' + comment + '">\n' +
            '                                <small>Hủy</small>\n' +
            '                            </div>')
        $('.reply-action[data-action="' + action + '"]').html('')
    })

    function resetReply(action, comment) {
        $('.post-comment-text-reply[data-action="' + action + '"]').removeAttr("contenteditable").removeAttr("spellcheck").removeAttr('style');
        $('.comment-post-reply[data-action="' + action + '"]').removeAttr('style').append('<button\n' +
            '                                    class="btn btn-icon display-none btn-circle btn-active-color-primary w-25px h-25px bg-white shadow icon-comment-edit-reply ml-2"\n' +
            '                                    data-kt-image-input-action="change" data-action="' + action + '" data-comment="' + comment + '"\n' +
            '                                    data-bs-toggle="tooltip" title="">\n' +
            '                                    <i class="bi bi-pencil-fill fs-7"></i>\n' +
            '                                </button>');
        $('.fonts-edit-reply[data-action="' + action + '"]').addClass("display-none")
        $('.btn-reply-image-remove[data-action="' + action + '"]').addClass("display-none")
        $('.reply-cancel[data-action="' + action + '"]').remove()
        $('.reply-action[data-action="' + action + '"]').html('<span class="comment-like text-gray-700" data-action="' + action + '" data-comment="' + comment + '"><i class="fas fa-arrow-up text-700 "></i><span class="text-gray-700 text-700 ">  0  </span><i class="fas fa-arrow-down text-700"></i></span> <span class="reply-comment text-gray-700 text-700 ml-2" data-action="' + action + '" data-comment="' + comment + '">Trả lời</span>');

        if( $('#imageUploadReply-' + action).attr('data-delete') == 1) {
            $('.image-preview-commit-reply[data-action="' + action + '"]').addClass("display-none")
        }
    }
    $(document).on('click','#article .card .card-body .content-right .rightbar-top .share', function () {
        $.getScript("https://sp.zalo.me/plugins/sdk.js", function(){});
    })
</script>



<script>
    var action;
    var comment;
    var imageDelete = [];

    function readURLReplyComment(input) {
        action = $(input).data("action");
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#imageReplyPreview-' + action).css('background-image', "url(" + e.target.result + ")");
                $('#imageReplyPreview-' + action).attr('data-delete') == 0;
                $('#imageReplyPreview-' + action).hide();
                $('#imageReplyPreview-' + action).fadeIn(650);
            }

            reader.readAsDataURL(input.files[0]);
            $('.image-preview-reply[data-action="' + action + '"]').removeClass('display-none')
        }
    }

    $(document).on('change', '.image-upload-comment', function () {
        readURLReplyComment(this);
    })


    $(document).on('keypress', '.post-reply-text', function (e) {
        action = $(this).data("action");
        comment = $(this).data("comment");
        articleId = $(this).data("article");


        if (!e.shiftKey && (e.keyCode == 13 || e.keyCode == 10)) {
            action = $(this).data("action");
            var $this = $(this)
            let html = $(this).html();
            html.replace('<div>', '')
            html.replace('<span>', '')
            // html.replace('<span class="emoji">', '')
            html.replace('</span>', '')
            html.replace('</div>', '')
            html.replace('<div><br></div>', '')
            // let result = html.split('<br>');
            let data = html;
            Livewire.emitTo('user.articles.comment',"setContentReply", data)

