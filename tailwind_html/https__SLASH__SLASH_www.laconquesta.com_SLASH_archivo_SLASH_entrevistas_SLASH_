    <script defer src="https://unpkg.com/alpinejs@3.2.3/dist/cdn.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/blazy@1.8.2/blazy.min.js"></script>
<script type="text/javascript" src="./assets/js/functions.js"></script>    <script src="https://player.vimeo.com/api/player.js"></script>

  <script>
    let player;

    function loadVideo(newId){
        if(player){
            player.getVideoId().then(
                function(currentId){
                    if(currentId == newId){
                        player.ready().then(function(){
                            player.play();
                        })
                    }else{
                        player.destroy().then(function(){
                            player = new Vimeo.Player("vimeo-player",{id:newId});
                            player.ready().then(function(){
                                player.play();
                            })
                        });
                    }
                }
            )
        }else{
            player = new Vimeo.Player("vimeo-player",{id:newId});
            player.ready().then(function(){
                player.play();
            })
        }

    }

    function playerPause(){
        player.pause();
    }
  </script>
  
