        //         Livewire.emitTo('user.articles.reply', "reply", data, action)
        //     }
        //     resetComment(action)
        // }
    })

    $(document).on('click', '.reply-comment-cancel', function () {
        action = $(this).data("action");
        resetComment(action)
    })
    $(document).on('click', '.btn-comment-image-remove', function () {
        action = $(this).data("action");
        $('#imageCommentPreview-' + action).removeAttr('style')
