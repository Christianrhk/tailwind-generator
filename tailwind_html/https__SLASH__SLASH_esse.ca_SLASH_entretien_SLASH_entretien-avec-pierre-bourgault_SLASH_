           <script>
   
//open menu on bars clic
    const menu_btn_open = document.getElementById('extended-menu-btn-open');
    const menu_btn_close = document.getElementById('extended-menu-btn-close');
    const extended_menu = document.getElementById('extended-menu');
    menu_btn_open.onclick = () => {
        extended_menu.setAttribute('class', 'open')
    }
    menu_btn_close.onclick = () => {
        extended_menu.setAttribute('class', '')
    }





           </script>
</html>