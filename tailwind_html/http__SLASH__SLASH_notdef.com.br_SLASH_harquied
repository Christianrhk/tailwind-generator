<script>
    
    let form = $('.newsletter-form');

    let inputs = form.find('.data-form');
    
    inputs.blur(function() {

        let available = true;

        inputs.each(function(){
            if ( $(this).val().length < 1 ) {
                available = false;
            }
        });

        let submit = form.find('.newsletter-form__submit');

        if ( available ) {
            submit.removeClass('btn-disabled').prop("disabled", false).addClass('border-yellow text-yellow');
        }
        else {
            submit.removeClass('border-yellow text-yellow').prop("disabled", true).addClass('btn-disabled');
        }
    }); 

</script></div>


