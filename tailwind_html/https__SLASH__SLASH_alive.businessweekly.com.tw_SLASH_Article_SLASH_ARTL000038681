                else {
                    event.preventDefault();

                   
                    url = "/list/Search?ID=" + encodeURIComponent($("#inp_KeyWord").val().trim());
                    console.log(url)
                    window.location = url;
                }
            });
        })
        
    </script>
</body>
</html>

