        <script type="text/javascript">
        var formId = '';

        _beforeSubmit = function (event) {
            formId = event.target.id;

            $('#FieldError_Panel').html(null);

            var isValid = true;
                contact = document.getElementById('Contact'),
                email   = document.getElementById('Email'),
                subject = document.getElementById('Subject'),
                message = document.getElementById('Message');

            if ('-1' == $('#Contact').val()) {
                isValid = false;

                $('#FieldError_Panel').append('<p class="errors"><strong>You have not chosen a contact.</strong></p>');
                $('#FieldError_Panel').show();
            }

            if (! email.checkValidity()) {
                isValid = false;

                $('#FieldError_Panel').append('<p class="errors"><strong>You entered and invalid email address.</strong></p>');
                $('#FieldError_Panel').show();
            }

            if (! subject.checkValidity()) {
                isValid = false;

                $('#FieldError_Panel').append('<p class="errors"><strong>You entered and invalid subject.</strong></p>');
                $('#FieldError_Panel').show();
            }

            if (! message.checkValidity()) {
                isValid = false;

                $('#FieldError_Panel').append('<p class="errors"><strong>You entered and invalid message.</strong></p>');
                $('#FieldError_Panel').show();
            }

            return isValid;
        };

        _submitEvent = function () {
            $('#' + formId).submit();
        };
    </script>
    <script type="text/javascript">
        $(function () {
            var selectedCountryElement = $('.country-dropdown__item--active')[0],
                currentCountryText = $(selectedCountryElement).text();

            $('.country-dropdown__btn').html(currentCountryText);
        });
