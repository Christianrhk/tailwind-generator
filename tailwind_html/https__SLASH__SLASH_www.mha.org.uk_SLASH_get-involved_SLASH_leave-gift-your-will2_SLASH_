    //
    // Gift in wills guide modal
    //
    Vue.component('gift-in-wills-guide-modal', {
        mixins: [formValidation, googleAnalytics],
        props: ['name'],
        provide: function() {
            return {
                parentValidator: this.$validator,
            }
        },
        data: function () {
            return {
                title: 'Gifts in Wills guide',
                show: false,
                sent: false,
                sending: false,
                enquiry: {
                    gifts_in_wills_guide: true,
                    receive_guide: '',
                    title: '',
                    first_name: '',
                    last_name: '',
                    email: '',
                    confirm_email: '',
                    telephone: '',
                    address_line_1: '',
                    address_line_2: '',
                    address_town_city: '',
                    address_postcode: '',
                    contact_preferences: [],
                    username: ''
                },
                giftInWillsDocumentUrl: 'https://www.mha.org.uk/download_file/force/7376/' // MHA_Guide_to_Gifts_in_Wills.pdf
            }
        },
        computed: {
            byPost: function() {
                if(this.enquiry.receive_guide == 'Post')
                {
                    return true
                }

                return false
            },
            byDownload: function() {
                if(this.enquiry.receive_guide == 'Download')
                {
                    return true
                }

                return false
            }
        },
        methods: {
            openModal: function() {
                this.show = true
            },
            close: function() {
                this.show = false
            },
            downloadFile: function(href, title) {
                var element = document.createElement('a');
                element.setAttribute('href', href);
                element.setAttribute('download', title);

                element.style.display = 'none';
                document.body.appendChild(element);

                element.click();

                document.body.removeChild(element);
            },
            submit: function() {
                this.sending = true
                var self = this

                if(this.valid && this.enquiry.username == '') {
                    this.sending = true

                    axios.post('/enquire/', this.enquiry)
                    .then(function(response) {
                        self.title = 'Thank you'
                        self.sent = true
                        self.sending = false
                        if(self.byDownload) {
                            self.downloadFile(self.giftInWillsDocumentUrl, 'MHA Guide to Gift in Wills')
                        }
                        ga('send', 'event', 'Fundraising', 'download', 'Gift in Wills Guide');
                    })
                    .catch(function(error) {
                        console.log(error)
                    })
                }
            }
        },
        watch: {
            // 'enquiry.receive_guide': function() {
                
            // }
        },
        template: '#vue-gifts-in-wills-guide-modal'
    })

