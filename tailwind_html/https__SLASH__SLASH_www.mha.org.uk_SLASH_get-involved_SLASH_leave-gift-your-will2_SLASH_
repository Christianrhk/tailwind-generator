    //
    // Custom input
    //
    Vue.component('custom-input', {
        inject: ["parentValidator"],
        props: ['value', 'name', 'type', 'validate', 'label', 'placeholder', 'classes'],
        data: function () {
            return {
                inputValue: ''
            }
        },
        created: function() {
            this.$validator = this.parentValidator
        },
        mounted: function() {
            this.inputValue = this.value
        },
        watch: {
            inputValue: function() {
                this.$emit('input', this.inputValue)
            }
        },
        template: '#vue-custom-input'
    })

