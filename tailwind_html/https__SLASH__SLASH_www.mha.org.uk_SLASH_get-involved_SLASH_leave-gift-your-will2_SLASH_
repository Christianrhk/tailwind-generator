<!-- spinner -->
<script type="text/x-template" id="vue-spinner">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16"><title>circle-04</title><g fill="#ffffff"><g class="nc-loop_circle-04-16"> <path fill="#ffffff" d="M8,16c-1.644043,0-3.2236328-0.4951172-4.5683594-1.4321289 c-0.453125-0.3154297-0.5644531-0.9389648-0.2485352-1.3920898c0.3164062-0.4521484,0.9399414-0.5644531,1.3920898-0.2485352 C5.5825195,13.6289062,6.7670898,14,8,14c3.3085938,0,6-2.6914062,6-6s-2.6914062-6-6-6S2,4.6914062,2,8 c0,0.5844727,0.0834961,1.1616211,0.2490234,1.7158203c0.1577148,0.5292969-0.1435547,1.0864258-0.6728516,1.2441406 c-0.5283203,0.1572266-1.0864258-0.1435547-1.2441406-0.6728516C0.1118164,9.5473633,0,8.777832,0,8c0-4.4111328,3.5888672-8,8-8 s8,3.5888672,8,8S12.4111328,16,8,16z" transform="rotate(40.524000012665056 8 8)"></path> </g></g></svg>  
</script>

<script>
    Vue.use(VeeValidate);

    //
    // Google analytics
    //
    var googleAnalytics = {
        methods: {
            /**
             * Capture google analytics events
             * 
             * @param object enquiry - the enquiry data
             * @param string serviceType - the service type (care, retirement, home)
             * @param boolean notEmpty - if the form is not empty
             */
            googleAnalytics: function(enquiry, serviceType, notEmpty)
            {
                // COMMUNITY (aka live-home)
                if(serviceType == 'community')
                {
                    // GET IN TOUCH
                    if(enquiry.get_in_touch)
                    {
                        // Facebook trigger
                        fbq('trackCustom', 'CommunitiesMakeAnEnquirySubmitButton');

                        ga('send', 'event', 'MHA Communities enquiries', 'sent', enquiry.enquiry_nature);
                    }
                }


                // CARE HOME
                if(serviceType == 'care')
                {
                    // BROCHURE DOWNLOAD
                    if(enquiry.brochure_capture)
                    {

                        // Facebook trigger
                        fbq('trackCustom', 'CareHomeDownloadBrochureSubmitButton');

                        // NOT EMPTY
                        if(notEmpty)
                        {
                            // ENQUIRY NATURE CHOSEN
                            if(enquiry.enquiry_nature)
                            {
                                ga('send', 'event', 'Care Home Brochure Downloads', enquiry.viewBrochureOnline ? 'view online' : 'sent', 'Brochure ' + (enquiry.viewBrochureOnline ? 'view online - ' : 'download – ') + enquiry.enquiry_nature + ' follow-up request');
                            }
                            else
                            {
                                ga('send', 'event', 'Care Home Brochure Downloads', enquiry.viewBrochureOnline ? 'view online' : 'sent', 'Brochure ' + (enquiry.viewBrochureOnline ? 'view online - ' : 'download – ') + 'unspecified follow-up request');
                            }
                        }
                        else 
                        {
                            ga('send', 'event', 'Care Home Brochure Downloads', enquiry.viewBrochureOnline ? 'view online' : 'sent', 'Brochure ' + (enquiry.viewBrochureOnline ? 'view online - ' : 'download – ') + 'no follow-up request');
                        }
                    }

                    // ARRANGE A REMOTE TOUR 
                    if(enquiry.arrange_remote_tour)
                    {
                        ga('send', 'event', 'Care Home enquiries', 'sent', 'Arrange a remote tour');
                        
                        // Facebook trigger
                        fbq('trackCustom', 'CareHomeArrangeRemoteTourSubmitButton');
                    }

                    // GET IN TOUCH
                    if(enquiry.get_in_touch)
                    {
                        ga('send', 'event', 'Care Home enquiries', 'sent', enquiry.enquiry_nature);

                        // Facebook trigger
                        fbq('trackCustom', 'CareHomeMakeAnEnquirySubmitButton');
                    }
                }

                // RETIREMENT LIVING
                if(serviceType == 'retirement') 
                {
                    // BROCHURE DOWNLOAD
                    if(enquiry.brochure_capture)
                    {
                        // NOT EMPTY
                        if(notEmpty)
                        {
                            // ENQUIRY NATURE CHOSEN
                            if(enquiry.enquiry_nature)
                            {
                                ga('send', 'event', 'Retirement Living enquiries', enquiry.viewBrochureOnline ? 'view online' : 'sent', 'Brochure ' + (enquiry.viewBrochureOnline ? 'view online - ' : 'download – ') + enquiry.enquiry_nature + ' follow-up request');
                            }
                            else
                            {
                                ga('send', 'event', 'Retirement Living enquiries', enquiry.viewBrochureOnline ? 'view online' : 'sent', 'Brochure ' + (enquiry.viewBrochureOnline ? 'view online - ' : 'download – ') + 'unspecified follow-up request');
                            }
                        }
                        else 
                        {
                            fbq('trackCustom', 'RetirementLivingDownloadBrochureSubmitButton');
                            ga('send', 'event', 'Retirement Living enquiries', enquiry.viewBrochureOnline ? 'view online' : 'sent', 'Brochure ' + (enquiry.viewBrochureOnline ? 'view online - ' : 'download – ') + 'no follow-up request');
                        }
                    }

                    // GET IN TOUCH
                    if(enquiry.get_in_touch)
                    {
                        // console.log('get in touch - retirement living')
                        ga('send', 'event', 'Retirement Living enquiries', 'sent', enquiry.enquiry_nature);

                        // Facebook trigger
                        fbq('trackCustom', 'RetirementLivingMakeAnEnquirySubmitButton');
                    }

                    // JOIN MAILING LIST
                    if(enquiry.mailing_list) {
                        fbq('trackCustom', 'RetirementLivingJoinMailingListButton');
                        ga('send', 'event', 'Retirement Living enquiries', 'sent', 'Join our mailing list');
                    }

                    // REQUEST A CALLBACK
                    if(enquiry.request_callback) {
                        fbq('trackCustom', 'RetirementLivingRequestCallbackButton');
                        ga('send', 'event', 'Retirement Living enquiries', 'sent', 'Request a callback');
                    }

                    // DOWNLOAD PROPERTY DETAILS
                    if (enquiry.property_details_download) {
                        ga('send', 'event', 'Retirement Living enquiries', 'download', 'property details download');
                    }

                }

                if(enquiry.sponsorship_pack_download)
                {
                    ga('send', 'event', 'Fundraising', 'download', 'sponsorship pack');
                }
            }
        }
    }

    //
    // Mixin helper to check the url
    //
    var urlHelper = {
        methods: {
            /**
             * Determine if url has a search param
             * 
             * @param string param
             * @return {boolean}
             */
            paramExists: function(param) 
            {
                let urlParams = new URLSearchParams(window.location.search);

                if(urlParams.has(param))
                {
                    return true
                }

                return false
            }
        }
    }

    //
    // Form validation mixin
    //
    var formValidation = {
        data: function() {
            return {
                valid: false
            }
        },
        mounted: function() {
            this.valid = this.formValid()
        },
        methods: {
            formValid: function() {
                for (var property in this.enquiry) {
                    if(this.fields[property] && !this.fields[property].valid) {
                        return false
                    }
                }
                return true
            }
        },
        watch: {
            enquiry: {
                handler: function(newValue) {
                    var self = this
                    setTimeout(function() {
                        self.valid = self.formValid()
                    }, 100)
                },
                deep: true
            }
        },
    }

    //
    // Modal
    //
    Vue.component('modal', {
        props: ['show', 'sent', 'title'],
        data: function () {
            return {
                open: false
            }
        },
        methods: {
            close: function() {
                this.$emit('close')
            }
        },
        watch: {
            show: function() {
                if(this.show == true) {
                    document.body.classList.add("page_has_overlay");
                } else {
                    document.body.classList.remove("page_has_overlay");
                }
            }
        },
        template: '#vue-modal'
    })

    //
    // Brochure download
    //
    Vue.component('brochure-download-modal', {
        mixins: [formValidation, googleAnalytics, urlHelper],
        props: [
            'brochureDownload', 
            'serviceId', 
            'serviceName', 
            'serviceType', 
            'serviceTelephone', 
            'brochureUrl',
            'brochureImage',
            'issuuEmbed'
        ],
        provide: function() {
            return {
                parentValidator: this.$validator,
            }
        },
        data: function () {
            return {
                title: 'Request our ' + this.serviceName + ' brochure',
                show: false,
                sent: false,
                sending: false,
                viewBrochureOnline: false,
                enquiry: {
                    brochure_capture: true,
                    first_name: '',
                    last_name: '',
                    contact_email: '',
                    enquiry: '',
                    contact_telephone: '',
                    service_id: '' ,
                    enquiry_nature: '',
                    type_of_care: '',
                    how_did_you_hear_about_us: '',
                    who_the_care_is_for: '',
                    preferred_contact_time: '',
                    preferred_contact_phone: '',
                    preferred_contact_email: '',
                    username: '',
                    viewBrochureOnline: '',
                    service_id: null
                }
            }
        },
        mounted: function() {
            // if(this.serviceType == 'retirement') {
            //     this.title = 'Request our retirement living brochure'
            // }
            if(this.paramExists('download-brochure')) {
                this.show = true
            }
        },
        computed: {
            /**
             * If ISSUU embed is present
             * 
             * @returns {Boolean}
             */
            canDownloadBrochure: function() {
                if(!this.issuuEmbed) {
                    return false
                }

                return true
            },
            /**
             * Whether all the fields are empty
             * 
             * @return {Boolean}
             */
            emptyEnquiry: function() {
                if(
                    this.enquiry.first_name == '' &&
                    this.enquiry.last_name == '' &&
                    this.enquiry.contact_email == '' &&
                    this.enquiry.contact_telephone == '' &&
                    this.enquiry.enquiry_nature == '' &&
                    this.enquiry.username == ''
                ) {
                    return true
                }

                return false
            },
            /**
             * Either email or telephone entered
             * 
             * @returns {Boolean}
             */
            followUpRequested: function() {
                if(this.enquiry.contact_email != '' || this.enquiry.contact_telephone != '') {
                    return true
                }

                return false
            },
            /**
             *
             *            
             */
            followUpText: function() {
                if(this.enquiry.contact_telephone != '' && this.enquiry.contact_email != '') 
                {
                    return 'call or email'
                } 
                else if(this.enquiry.contact_telephone != '') 
                {
                    return 'call'
                }
                else(this.enquiry.contact_email != '') 
                {
                    return 'email'
                }

                return ''
            },
            /**
             * Get the enquiry nature lower case (interested in)
             * 
             * @returns {String}
             */
            interestedIn: function() {
                if(this.enquiry.enquiry_nature == 'Other') {
                    return ''
                }

                if(this.enquiry.enquiry_nature != '') {
                    return this.enquiry.enquiry_nature.toLowerCase()
                }

                return ''
            }
        },
        methods: {
            openModal: function() {
                this.show = true
            },
            close: function() {
                this.show = false

                // reset enquiry fields when modal closed
                this.sent = false 
                this.enquiry = {
                    brochure_capture: true,
                    first_name: '',
                    last_name: '',
                    contact_email: '',
                    enquiry: '',
                    contact_telephone: '',
                    service_id: '' ,
                    enquiry_nature: '',
                    type_of_care: '',
                    how_did_you_hear_about_us: '',
                    who_the_care_is_for: '',
                    preferred_contact_time: '',
                    preferred_contact_phone: '',
                    preferred_contact_email: '',
                    username: '',
                    viewBrochureOnline: '',
                    service_id: null
                }
                
            },
            downloadFile: function(href, title) {
                var element = document.createElement('a');
                element.setAttribute('href', href);
                element.setAttribute('download', title);

                element.style.display = 'none';
                document.body.appendChild(element);

                element.click();

                document.body.removeChild(element);
            },
            openFile: function(file) {
                window.open(file, '_blank').focus();
            },
            submit: function({ viewBrochureOnline = false } = {}) {
                var self = this

                self.viewBrochureOnline = viewBrochureOnline
                self.enquiry.viewBrochureOnline = viewBrochureOnline

                if(!this.followUpRequested) {
                    // no follow up requested

                    self.title = this.serviceName + ' brochure'
                    self.sent = true

                    if(self.serviceType == 'care' && !viewBrochureOnline) {
                        self.downloadFile(self.brochureDownload)
                    }

                    self.googleAnalytics(self.enquiry, self.serviceType, false)
                } 
                else if(this.enquiry.username == '') 
                {
                    // something entered
                    this.sending = true
                    this.enquiry.service_id = this.serviceId

                    axios.post('/enquire/', {
                        'brochure_capture': true,
                        'brochure_first_name': this.enquiry.first_name,
                        'brochure_last_name': this.enquiry.last_name,
                        'brochure_email_address': this.enquiry.contact_email,
                        'brochure_telephone': this.enquiry.contact_telephone,
                        'brochure_enquiry_nature': this.enquiry.enquiry_nature,
                        'brochure_service_id': this.enquiry.service_id,
                        'brochure_username': this.enquiry.username
                    })
                    .then(function(response) {
                        self.title = self.serviceName + ' brochure'
                        self.sent = true
                        self.sending = false

                        if(self.serviceType == 'care' && !viewBrochureOnline) {
                            self.downloadFile(self.brochureDownload)
                        }

                        self.googleAnalytics(self.enquiry, self.serviceType, true)
                    })
                    .catch(function(error) {
                        console.log(error)
                    })
                }
            }
        },
        template: '#vue-brochure-download-modal'
    })

    //
    // Get in touch
    //
    Vue.component('get-in-touch-modal', {
        mixins: [formValidation, googleAnalytics, urlHelper],
        props: ['name', 'serviceId', 'serviceName', 'serviceType', 'serviceTelephone', 'callCentreNumber', 'callCentreNumberTimes'],
        provide: function() {
            return {
                parentValidator: this.$validator,
            }
        },
        data: function () {
            return {
                title: 'Get in touch',
                show: false,
                sent: false,
                sending: false,
                enquiry: {
                    get_in_touch: true,
                    first_name: '',
                    last_name: '',
                    contact_email: '',
                    enquiry: '',
                    contact_telephone: '',
                    service_id: '' ,
                    enquiry_nature: '',
                    type_of_care: '',
                    how_did_you_hear_about_us: '',
                    who_the_care_is_for: '',
                    loved_one_name: '',
                    location: '',
                    preferred_contact_time: '',
                    preferred_contact_phone: '',
                    preferred_contact_email: '',
                    username: '',
                    service_id: null
                }
            }
        },
        mounted: function() {
            if(this.paramExists('contact')) {
                this.show = true
            }
        },
        computed: {
            serviceTypeName: function() {
                if(this.serviceType == 'retirement') {
                    return 'retirement living'
                } else if (this.serviceType == 'community') {
                    return 'community'
                } else {
                    return 'care home'
                }
            }
        },
        methods: {
            openModal: function() {
                this.show = true
            },
            close: function() {
                this.show = false
            },
            submit: function() {
                var self = this

                if(this.valid && this.enquiry.username == '') {
                    this.sending = true
                    this.enquiry.service_id = this.serviceId

                    axios.post('/enquire/', this.enquiry)
                    .then(function(response) {
                        self.title = 'Thank you'
                        self.sent = true
                        self.sending = false
                        self.googleAnalytics(self.enquiry, self.serviceType, true)
                    })
                    .catch(function(error) {
                        console.log(error)
                    })
                }
            },
            telephoneClick: function(type) {
                if(type == 'general')
                {
                    ga('send', 'event', 'Care Home enquiries', 'click', 'Telephone call – general enquiry');
                }

                if(type == 'care')
                {
                    ga('send', 'event', 'Care Home enquiries', 'click', 'Telephone call – care enquiry');
                }
            }
        },
        template: '#vue-get-in-touch-modal'
    })

