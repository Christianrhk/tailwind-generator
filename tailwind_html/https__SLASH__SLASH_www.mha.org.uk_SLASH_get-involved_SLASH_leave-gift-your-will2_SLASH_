<script>
    function vueInstance(id) {
        var el = document.getElementById(id);
        return el.__vue__.$root;
    }

    function openModal(ref, data) {
        vueInstance('modals').$refs[ref].openModal(data)
    }

    function openPageModal(ref) {
        vueInstance('page-modals').$refs[ref].openModal()
    }
</script>

