<!-- custom input -->
<script type="text/x-template" id="vue-custom-input">
    <div>
        <label class="vue-label">{{ label }}</label>
        <input v-if="type != 'textarea'" class="vue-input" v-model="inputValue" :type="type" :name="name" v-validate="validate" :class="{'input': true, 'vue-input_error': errors.has(name) }, classes" :placeholder="placeholder">
        <textarea v-if="type == 'textarea'" class="vue-input" v-model="inputValue" :name="name" v-validate="validate" :class="{'input': true, 'vue-input_error': errors.has(name) }, classes" :placeholder="placeholder"></textarea>
        <!-- <span v-show="errors.has(name)" class="help is-danger">{{ errors.first(name) }}</span> -->
    </div>
</script>

