    //
    // Sponsorship Pack Download (fundraising events)
    //
    Vue.component('sponsorship-pack-download-modal', {
        mixins: [formValidation, googleAnalytics, urlHelper],
        props: ['packDownload'],
        provide: function() {
            return {
                parentValidator: this.$validator,
            }
        },
        data: function () {
            return {
                title: 'Download Sponsorship Pack',
                show: false,
                sent: false,
                sending: false,
                enquiry: {
                    sponsorship_pack_download: true,
                    first_name: '',
                    last_name: '',
                    contact_email: '',
                    username: '',
                }
            }
        },
        mounted: function() {
            
        },
        methods: {
            openModal: function() {
                this.show = true
            },
            close: function() {
                this.show = false
            },
            downloadFile: function(href, title) {
                var element = document.createElement('a');
                element.setAttribute('href', href);
                element.setAttribute('download', title);

                element.style.display = 'none';
                document.body.appendChild(element);

                element.click();

                document.body.removeChild(element);
            },
            submit: function() {
                var self = this

                if(
                    this.enquiry.first_name == '' &&
                    this.enquiry.last_name == '' &&
                    this.enquiry.contact_email == '' &&
                    this.enquiry.username == ''
                ) {
                    // nothing entered
                    self.title = 'Thank you'
                    self.sent = true
                    self.downloadFile(self.packDownload, 'Sponsorship Pack')
                    self.googleAnalytics(self.enquiry, null, false)
                } 
                else if(this.enquiry.username == '') 
                {
                    // something entered

                    this.sending = true
                    //this.enquiry.service_id = this.serviceId

                    axios.post('/enquire/', {
                        'sponsorship_pack_download': true,
                        'first_name': this.enquiry.first_name,
                        'last_name': this.enquiry.last_name,
                        'email': this.enquiry.contact_email,
                        'username': this.enquiry.username
                    })
                    .then(function(response) {
                        console.log(response)
                        self.title = 'Thank you'
                        self.sent = true
                        self.sending = false
                        self.downloadFile(self.packDownload, 'Sponsorship Pack')
                        self.googleAnalytics(self.enquiry, null, true)
                    })
                    .catch(function(error) {
                        console.log(error)
                    })
                }
            }
        },
        template: '#vue-sponsorship-pack-download-modal'
    })

    //
    // Events search
    //
    Vue.component('event-search', {
        props: ['eventsEndpoint', 'availableRegions', 'availableTypes'],
        data: function () {
            return {
                results: '',
                available_regions: [],
                available_types: [],
                search: {
                    region: '',
                    type: ''
                }
            }
        },
        mounted: function() {
            var self = this

            self.available_regions = self.availableRegions
            self.available_types = self.availableTypes

            self.getEvents()
        },
        methods: {
            getEvents: function() {
                let self = this
                
                axios.post(this.eventsEndpoint, { 
                    type: self.search.type,
                    region: self.search.region
                })
                .then(function(response) {
                    self.results = response.data.html
                })
                .catch(function(error) {
                    console.log(error)
                })
            }
        },
        watch: {
            search: {
                handler: function() {
                    this.getEvents()
                },
                deep: true
            }
        },
        template: '#vue-event-search'
    })

    //
    // Retirement living property details download
    //
    Vue.component('property-details-download-modal', {
        mixins: [formValidation, googleAnalytics, urlHelper],
        props: ['serviceName', 'serviceId', 'serviceType'],
        provide: function() {
            return {
                parentValidator: this.$validator,
            }
        },
        data: function () {
            return {
                title: 'Download Property Details',
                show: false,
                sent: false,
                sending: false,
                enquiry: {
                    property_details_download: true,
                    first_name: '',
                    last_name: '',
                    contact_email: '',
                    contact_telephone: '',
                    username: '',
                },
                propertyDetailsDownload: null,
                propertyId: null,
                propertyName: null
            }
        },
        mounted: function() {
            
        },
        methods: {
            openModal: function(data) {
                console.log(data)
                this.propertyDetailsDownload = data.propertyDetailsDownload
                this.propertyId = data.propertyId
                this.propertyName = data.propertyName
                this.show = true
            },
            close: function() {
                this.show = false
            },
            downloadFile: function(href, title) {
                var element = document.createElement('a');
                element.setAttribute('href', href);
                element.setAttribute('download', title);

                element.style.display = 'none';
                document.body.appendChild(element);

                element.click();

                document.body.removeChild(element);
            },
            submit: function() {
                var self = this

                if(
                    this.enquiry.first_name == '' &&
                    this.enquiry.last_name == '' &&
                    this.enquiry.contact_email == '' &&
                    this.enquiry.contact_telephone == '' &&
                    this.enquiry.username == ''
                ) {
                    // nothing entered
                    self.title = 'Thank you'
                    self.sent = true
                    self.downloadFile(self.propertyDetailsDownload, 'Property Details')
                    // self.googleAnalytics(self.enquiry, null, false)
                    self.googleAnalytics(self.enquiry, self.serviceType, false)
                }
                else if(this.enquiry.username == '') 
                {
                    // something entered

                    this.sending = true
                    //this.enquiry.service_id = this.serviceId

                    axios.post('/enquire/', {
                        'service_property_enquiry': true,
                        'service': this.serviceId,
                        'property': this.propertyId,
                        'first_name': this.enquiry.first_name,
                        'last_name': this.enquiry.last_name,
                        'email': this.enquiry.contact_email,
                        'telephone': this.enquiry.contact_telephone,
                        'username': this.enquiry.username
                    })
                    .then(function(response) {
                        // console.log(response)
                        self.title = 'Thank you'
                        self.sent = true
                        self.sending = false
                        self.downloadFile(self.propertyDetailsDownload, 'Property Details')
                       // self.googleAnalytics(self.enquiry, null, true)
                       self.googleAnalytics(self.enquiry, self.serviceType, true)
                    })
                    .catch(function(error) {
                        console.log(error)
                    })
                }
            }
        },
        template: '#vue-property-details-download-modal'
    })

