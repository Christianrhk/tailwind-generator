    //
    // Checkbox
    //
    Vue.component('custom-checkbox', {
        inject: ["parentValidator"],
        props: {
            value: {

            },
            val: {

            },
            type: {
                default: 'checkbox'
            },
            rules: {

            },
            classes: {

            }
        },
        data: function() {
            return {
                checkedProxy: false
            }
        },
        created: function() {
            this.$validator = this.parentValidator
        },
        computed: {
            checked: {
                get: function() {
                    return this.value
                },
                set: function(val) {
                    this.checkedProxy = val
                }
            }
        },
        methods: {
            onChange: function(e) {
                this.$emit('input', this.checkedProxy)
            }
        },
        template: '#vue-custom-checkbox'
    })

