            <!--</a>-->
            <!--<a target="_blank" href="">-->
            <!--    <i class="fab fa-youtube"></i>-->
            <!--</a>-->
        </div>
    </div>
    <img class="absolute bottom-0 hidden lg:block" style="width: 100%" src="./images/background-circles.svg"/>
    <img class="absolute top-0 right-0 bg-color" src="./images/background-color.svg"/>
        <img class="right-0 absolute player" src="./images/player.png"/>
</div>
